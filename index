<script>
const originalWarn = console.warn;
  console.warn = function(...args) {
    const message = args.join(' ');
    if (
      message.includes('Unrecognized feature') ||
      message.includes('sandbox attribute') ||
      message.includes('Net state changed')
    ) {
      return;
    }
    originalWarn.apply(console, args);
  };
  
  // ‡∏ã‡πà‡∏≠‡∏ô Modal ‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î (‡∏¢‡∏Å‡πÄ‡∏ß‡πâ‡∏ô Login Screen)
  document.addEventListener('DOMContentLoaded', function() {
    const modalIds = [
      'addModal', 
      'manageModal', 
      'requestModal', 
      'reportModal', 
      'viewReportsModal', 
      'replyReportModal', 
      'newLinkModal', 
      'viewRequestsModal', 
      'rejectRequestModal'
    ];
    
    modalIds.forEach(function(id) {
      const modal = document.getElementById(id);
      if (modal) {
        modal.classList.remove('show');
      }
    });
  });
  
  let isAdmin = false;
  let allApps = [];
  let currentUserEmail = null;
  let isLoggedIn = false;
  
  window.onload = function() {
    checkLoginStatus();
  };

function openManualPage() {
  console.log('üîç ‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏î‡∏∂‡∏á URL ‡∏Ñ‡∏π‡πà‡∏°‡∏∑‡∏≠...');
  
  // ‡πÅ‡∏™‡∏î‡∏á Loading
  showMessage('‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÄ‡∏õ‡∏¥‡∏î‡∏Ñ‡∏π‡πà‡∏°‡∏∑‡∏≠... ‚è≥', 'success');
  
  google.script.run
    .withSuccessHandler(function(manualUrl) {
      console.log('‚úÖ ‡πÑ‡∏î‡πâ URL:', manualUrl);
      
      if (manualUrl) {
        // ‡πÄ‡∏õ‡∏¥‡∏î‡πÉ‡∏ô‡πÅ‡∏ó‡πá‡∏ö‡πÉ‡∏´‡∏°‡πà
        window.open(manualUrl, '_blank');
      } else {
        showMessage('‚ö†Ô∏è ‡πÑ‡∏°‡πà‡∏û‡∏ö‡∏•‡∏¥‡∏á‡∏Ñ‡πå‡∏Ñ‡∏π‡πà‡∏°‡∏∑‡∏≠ ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏ï‡∏¥‡∏î‡∏ï‡πà‡∏≠ Admin', 'error');
      }
    })
    .withFailureHandler(function(error) {
      console.error('‚ùå Error:', error);
      showMessage('‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ' + error, 'error');
    })
    .getManualUrl();
}
    
function checkLoginStatus() {
    // ‡πÅ‡∏™‡∏î‡∏á Login Screen ‡∏Å‡πà‡∏≠‡∏ô‡πÄ‡∏™‡∏°‡∏≠
    showLoginScreen();
    
    // ‡∏•‡∏≠‡∏á‡∏î‡∏∂‡∏á‡∏à‡∏≤‡∏Å cache ‡∏Å‡πà‡∏≠‡∏ô
    const cachedEmail = localStorage.getItem('userEmail');
    const cacheTime = localStorage.getItem('cacheTime');
    const now = new Date().getTime();
    
    // ‡∏ñ‡πâ‡∏≤‡∏°‡∏µ cache ‡πÅ‡∏•‡∏∞‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡∏´‡∏°‡∏î‡∏≠‡∏≤‡∏¢‡∏∏ (5 ‡∏ô‡∏≤‡∏ó‡∏µ)
    if (cachedEmail && cacheTime && (now - parseInt(cacheTime)) < 300000) {
      console.log('‚úÖ Using cached session');
      currentUserEmail = cachedEmail;
      isLoggedIn = true;
      showMainApp();
      loadApps();
      return;
    }
    
    // ‡∏ñ‡πâ‡∏≤‡πÑ‡∏°‡πà‡∏°‡∏µ cache ‡∏´‡∏£‡∏∑‡∏≠‡∏´‡∏°‡∏î‡∏≠‡∏≤‡∏¢‡∏∏
    console.log('üîÑ Fetching fresh session...');
    google.script.run
      .withSuccessHandler(function(email) {
        if (email && email !== '‡πÑ‡∏°‡πà‡∏ó‡∏£‡∏≤‡∏ö‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ') {
          currentUserEmail = email;
          isLoggedIn = true;
          
          localStorage.setItem('userEmail', email);
          localStorage.setItem('cacheTime', new Date().getTime().toString());
          
          showMainApp();
          loadApps();
        } else {
          console.log('No active session - showing login');
        }
      })
      .withFailureHandler(function(error) {
        console.log('Auto-login failed:', error);
      })
      .getCurrentUser();
  }
    
  function handleGoogleLogin() {
    showMessage('‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÄ‡∏Ç‡πâ‡∏≤‡∏™‡∏π‡πà‡∏£‡∏∞‡∏ö‡∏ö... ‚è≥', 'success');
    
    google.script.run
      .withSuccessHandler(function(email) {
        if (email && email !== '‡πÑ‡∏°‡πà‡∏ó‡∏£‡∏≤‡∏ö‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ') {
          currentUserEmail = email;
          isLoggedIn = true;
          
          localStorage.setItem('userEmail', email);
          localStorage.setItem('cacheTime', new Date().getTime().toString());
          
          showMainApp();
          loadApps();
          showMessage('‡πÄ‡∏Ç‡πâ‡∏≤‡∏™‡∏π‡πà‡∏£‡∏∞‡∏ö‡∏ö‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à! üéâ', 'success');
        } else {
          showMessage('‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡πÄ‡∏Ç‡πâ‡∏≤‡∏™‡∏π‡πà‡∏£‡∏∞‡∏ö‡∏ö‡πÑ‡∏î‡πâ ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏•‡∏≠‡∏á‡πÉ‡∏´‡∏°‡πà', 'error');
        }
      })
      .withFailureHandler(function(error) {
        showMessage('‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ' + error, 'error');
      })
      .getCurrentUser();
  }
    
function handleLogout() {
  if (confirm('‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡∏≠‡∏≠‡∏Å‡∏à‡∏≤‡∏Å‡∏£‡∏∞‡∏ö‡∏ö‡πÉ‡∏ä‡πà‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà?')) {
    currentUserEmail = null;
    isLoggedIn = false;
    
    // ‡∏•‡∏ö cache
    localStorage.removeItem('userEmail');
    localStorage.removeItem('cacheTime');
    
    // ‡∏´‡∏¢‡∏∏‡∏î Auto-refresh
    stopBadgeAutoRefresh();

    showLoginScreen();
    showMessage('‡∏≠‡∏≠‡∏Å‡∏à‡∏≤‡∏Å‡∏£‡∏∞‡∏ö‡∏ö‡πÄ‡∏£‡∏µ‡∏¢‡∏ö‡∏£‡πâ‡∏≠‡∏¢', 'success');
  }
}
    
  function showLoginScreen() {
    const loginScreen = document.getElementById('loginScreen');
    const mainApp = document.getElementById('mainApp');
    
    if (loginScreen) {
      loginScreen.style.display = 'flex';
    }
    if (mainApp) {
      mainApp.classList.remove('show');
    }
  }
  
  function showMainApp() {
    const loginScreen = document.getElementById('loginScreen');
    const mainApp = document.getElementById('mainApp');
    
    if (loginScreen) {
      loginScreen.style.display = 'none';
    }
    if (mainApp) {
      mainApp.classList.add('show');
    }
  }  
    // ‡πÅ‡∏™‡∏î‡∏á‡∏õ‡∏∏‡πà‡∏°‡∏î‡∏π‡∏£‡∏≤‡∏¢‡∏á‡∏≤‡∏ô‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö Admin
function loadApps() {
  const loadingText = document.getElementById('loadingText');
  if (loadingText) {
    loadingText.textContent = '‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå...';
  }
  
  google.script.run
    .withSuccessHandler(function(result) {
      const loadingText2 = document.getElementById('loadingText');
      if (loadingText2) {
        loadingText2.textContent = '‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÇ‡∏´‡∏•‡∏î‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô...';
      }
      
      isAdmin = result.isAdmin;
      currentUserEmail = result.userEmail;
      
      document.getElementById('userEmail').textContent = currentUserEmail;
      
      // ‡∏ã‡πà‡∏≠‡∏ô‡∏õ‡∏∏‡πà‡∏°‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î‡∏Å‡πà‡∏≠‡∏ô
      document.getElementById('userButtons').style.display = 'none';
      document.getElementById('adminButtons').style.display = 'none';
      
      if (isAdmin) {
  // ‚úÖ ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏ß‡πà‡∏≤‡πÄ‡∏õ‡πá‡∏ô Super Admin ‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà
  google.script.run
    .withSuccessHandler(function(isSuperAdminUser) {
      if (isSuperAdminUser) {
        document.getElementById('adminBadge').innerHTML = '<span class="admin-badge" style="background: linear-gradient(135deg, #dc2626 0%, #991b1b 100%);">üëë SUPER ADMIN</span>';
      } else {
        document.getElementById('adminBadge').innerHTML = '<span class="admin-badge">üë§ ADMIN</span>';
      }
    })
    .isSuperAdmin(currentUserEmail);
  
  document.getElementById('adminButtons').style.display = 'flex';
  
  // ‚úÖ ‡πÄ‡∏£‡∏¥‡πà‡∏° Auto-refresh ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö Admin
  startBadgeAutoRefresh();
} else {
        document.getElementById('adminBadge').innerHTML = '';
        document.getElementById('userButtons').style.display = 'flex';
      }
      
      displayApps(result.apps);
    })
    .withFailureHandler(function(error) {
      showMessage('‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ' + error, 'error');
    })
    .getApps();
}

// ‡πÄ‡∏õ‡∏¥‡∏î Modal ‡∏î‡∏π‡∏£‡∏≤‡∏¢‡∏á‡∏≤‡∏ô
function openViewReportsModal() {
  document.getElementById('viewReportsModal').classList.add('show');
  loadReports();
}

// ‡∏õ‡∏¥‡∏î Modal ‡∏î‡∏π‡∏£‡∏≤‡∏¢‡∏á‡∏≤‡∏ô
function closeViewReportsModal() {
  document.getElementById('viewReportsModal').classList.remove('show');
}

// ‡πÇ‡∏´‡∏•‡∏î‡∏£‡∏≤‡∏¢‡∏á‡∏≤‡∏ô
function loadReports() {
  console.log('=== Loading Reports V2 ===');
  
  const loadingHtml = `
    <div class="loading">
      <div class="spinner"></div>
      <p>‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÇ‡∏´‡∏•‡∏î‡∏£‡∏≤‡∏¢‡∏á‡∏≤‡∏ô...</p>
    </div>
  `;
  document.getElementById('reportsList').innerHTML = loadingHtml;
  
  google.script.run
    .withSuccessHandler(function(reports) {
      console.log('=== Reports V2 Received ===');
      console.log('Type:', typeof reports);
      console.log('Is Array:', Array.isArray(reports));
      console.log('Value:', reports);
      console.log('Length:', reports ? reports.length : 'N/A');
      
      if (reports === null || reports === undefined) {
        console.error('ERROR: Still receiving null!');
        showMessage('‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡πÇ‡∏´‡∏•‡∏î‡∏£‡∏≤‡∏¢‡∏á‡∏≤‡∏ô‡πÑ‡∏î‡πâ', 'error');
        document.getElementById('reportsList').innerHTML = `
          <div class="empty-state">
            <h3>‚ùå ‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î</h3>
            <p>‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏ï‡∏¥‡∏î‡∏ï‡πà‡∏≠‡∏ú‡∏π‡πâ‡∏î‡∏π‡πÅ‡∏•‡∏£‡∏∞‡∏ö‡∏ö</p>
          </div>
        `;
        return;
      }
      
      displayReports(reports);
    })
    .withFailureHandler(function(error) {
      console.error('=== Error V2 ===');
      console.error('Error:', error);
      showMessage('‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ' + error.message, 'error');
      document.getElementById('reportsList').innerHTML = `
        <div class="empty-state">
          <h3>‚ùå ‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î</h3>
          <p>${error.message}</p>
        </div>
      `;
    })
    .getAllReportsV2(); // ‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡∏à‡∏≤‡∏Å getAllReports ‡πÄ‡∏õ‡πá‡∏ô getAllReportsV2
}

// ‡πÅ‡∏™‡∏î‡∏á‡∏£‡∏≤‡∏¢‡∏á‡∏≤‡∏ô
function displayReports(reports) {
  const container = document.getElementById('reportsList');
  
  console.log('=== Display Reports ===');
  console.log('Reports:', reports);
  
  // ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏ß‡πà‡∏≤‡πÄ‡∏õ‡πá‡∏ô array ‡πÅ‡∏•‡∏∞‡∏°‡∏µ‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•
  if (!Array.isArray(reports)) {
    console.error('Reports is not an array:', typeof reports);
    container.innerHTML = `
      <div class="empty-state">
        <h3>‚ö†Ô∏è ‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÑ‡∏°‡πà‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á</h3>
        <p>‡∏£‡∏π‡∏õ‡πÅ‡∏ö‡∏ö‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏£‡∏≤‡∏¢‡∏á‡∏≤‡∏ô‡πÑ‡∏°‡πà‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á</p>
      </div>
    `;
    return;
  }
  
  if (reports.length === 0) {
    console.log('No reports found');
    container.innerHTML = `
      <div class="empty-state">
        <h3>üìã ‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏£‡∏≤‡∏¢‡∏á‡∏≤‡∏ô</h3>
        <p>‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ‡∏£‡∏≤‡∏¢‡∏á‡∏≤‡∏ô‡∏õ‡∏±‡∏ç‡∏´‡∏≤‡∏´‡∏£‡∏∑‡∏≠‡∏Ç‡πâ‡∏≠‡πÄ‡∏™‡∏ô‡∏≠‡πÅ‡∏ô‡∏∞</p>
      </div>
    `;
    return;
  }
  
  console.log('Rendering ' + reports.length + ' reports');
  
  let html = '';
  
  reports.forEach(function(report, index) {
    const statusClass = report.status === '‡πÄ‡∏™‡∏£‡πá‡∏à‡∏™‡∏¥‡πâ‡∏ô' ? 'done' : 
                       report.status === '‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç' ? 'working' : 'pending';
    const itemClass = report.status === '‡πÄ‡∏™‡∏£‡πá‡∏à‡∏™‡∏¥‡πâ‡∏ô' ? 'status-done' : 
                     report.status === '‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç' ? 'status-working' : 'status-pending';
    
    const safeMessage = String(report.message || '').replace(/</g, '&lt;').replace(/>/g, '&gt;');
    const safeAdminReply = String(report.adminReply || '').replace(/</g, '&lt;').replace(/>/g, '&gt;');
    const safeStatus = String(report.status || '‡∏£‡∏≠‡∏î‡∏≥‡πÄ‡∏ô‡∏¥‡∏ô‡∏Å‡∏≤‡∏£');
    
    const escapedAdminReply = safeAdminReply.replace(/'/g, "&#39;").replace(/"/g, "&quot;");
    const escapedStatus = safeStatus.replace(/'/g, "&#39;");
    
    html += `
      <div class="report-item ${itemClass}">
        <div class="report-header">
          <div>
            <span class="report-user">üë§ ${report.userEmail}</span>
            <span class="report-status ${statusClass}">${safeStatus}</span>
          </div>
          <span class="report-time">‚è∞ ${new Date(report.timestamp).toLocaleString('th-TH')}</span>
        </div>
        
        <div class="report-message">${safeMessage}</div>
        
        ${report.adminReply ? `
          <div class="report-reply">
            <div class="report-reply-label">‚úâÔ∏è ‡∏Ñ‡∏≥‡∏ï‡∏≠‡∏ö‡∏à‡∏≤‡∏Å Admin (${new Date(report.replyDate).toLocaleString('th-TH')})</div>
            <div class="report-reply-text">${safeAdminReply}</div>
          </div>
        ` : ''}
        
        <div class="report-actions">
          <button class="btn-reply" onclick="openReplyModal(${report.rowIndex}, '${escapedStatus}', '${escapedAdminReply}')">
            ‚úâÔ∏è ${report.adminReply ? '‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç‡∏Ñ‡∏≥‡∏ï‡∏≠‡∏ö' : '‡∏ï‡∏≠‡∏ö‡∏Å‡∏•‡∏±‡∏ö'}
          </button>
          <button class="btn-delete-report" onclick="deleteReportItem(${report.rowIndex})">
            üóëÔ∏è ‡∏•‡∏ö
          </button>
        </div>
      </div>
    `;
  });
  
  container.innerHTML = html;
  console.log('Display completed');
}

// ‡πÄ‡∏õ‡∏¥‡∏î Modal ‡∏ï‡∏≠‡∏ö‡∏Å‡∏•‡∏±‡∏ö
function openReplyModal(rowIndex, status, adminReply) {
  console.log('openReplyModal called:', rowIndex, status, adminReply);
  
  document.getElementById('replyRowIndex').value = rowIndex;
  document.getElementById('replyStatus').value = status || '‡∏£‡∏≠‡∏î‡∏≥‡πÄ‡∏ô‡∏¥‡∏ô‡∏Å‡∏≤‡∏£';
  
  // Decode HTML entities
  const decodedReply = adminReply
    .replace(/&#39;/g, "'")
    .replace(/&quot;/g, '"')
    .replace(/&lt;/g, '<')
    .replace(/&gt;/g, '>');
  
  document.getElementById('replyMessage').value = decodedReply;
  document.getElementById('replyReportModal').classList.add('show');
}

// ‡∏õ‡∏¥‡∏î Modal ‡∏ï‡∏≠‡∏ö‡∏Å‡∏•‡∏±‡∏ö
function closeReplyReportModal() {
  document.getElementById('replyReportModal').classList.remove('show');
  document.getElementById('replyReportForm').reset();
}

// ‡∏™‡πà‡∏á‡∏Ñ‡∏≥‡∏ï‡∏≠‡∏ö
// ‡∏™‡πà‡∏á‡∏Ñ‡∏≥‡∏ï‡∏≠‡∏ö
document.getElementById('replyReportForm').addEventListener('submit', function(e) {
  e.preventDefault();
  
  const rowIndex = parseInt(document.getElementById('replyRowIndex').value);
  const status = document.getElementById('replyStatus').value;
  const adminReply = document.getElementById('replyMessage').value;
  
  google.script.run
    .withSuccessHandler(function(result) {
      if (result.success) {
        showMessage('‡∏™‡πà‡∏á‡∏Ñ‡∏≥‡∏ï‡∏≠‡∏ö‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à! ‚úÖ', 'success');
        closeReplyReportModal();
        loadReports();
        loadPendingCounts(); // ‚úÖ ‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏ö‡∏£‡∏£‡∏ó‡∏±‡∏î‡∏ô‡∏µ‡πâ
      } else {
        showMessage(result.message || '‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î', 'error');
      }
    })
    .withFailureHandler(function(error) {
      showMessage('‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ' + error, 'error');
    })
    .updateReportStatus(rowIndex, status, adminReply);
});

// ‡∏•‡∏ö‡∏£‡∏≤‡∏¢‡∏á‡∏≤‡∏ô
function deleteReportItem(rowIndex) {
  if (!confirm('‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡∏•‡∏ö‡∏£‡∏≤‡∏¢‡∏á‡∏≤‡∏ô‡∏ô‡∏µ‡πâ‡πÉ‡∏ä‡πà‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà?')) {
    return;
  }
  
  google.script.run
    .withSuccessHandler(function(result) {
      if (result.success) {
        showMessage('‡∏•‡∏ö‡∏£‡∏≤‡∏¢‡∏á‡∏≤‡∏ô‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à! ‚úÖ', 'success');
        loadReports();
      } else {
        showMessage(result.message || '‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î', 'error');
      }
    })
    .withFailureHandler(function(error) {
      showMessage('‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ' + error, 'error');
    })
    .deleteReport(rowIndex);
}
    
    function displayApps(apps) {
      const container = document.getElementById('appsContainer');
      
      if (!apps || apps.length === 0) {
        container.innerHTML = `
          <div class="empty-state">
            <h3>üòä ‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô</h3>
            <p>‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏ï‡∏¥‡∏î‡∏ï‡πà‡∏≠ Admin ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏Ç‡∏≠‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡πÄ‡∏Ç‡πâ‡∏≤‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô</p>
            <button class="btn btn-submit" onclick="openRequestModal()" style="margin-top: 20px;">
              üìù ‡∏Ç‡∏≠‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡πÄ‡∏Ç‡πâ‡∏≤‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô
            </button>
          </div>
        `;
        return;
      }
      
      let html = '<div class="apps-grid">';
      
      apps.forEach(function(app, index) {
        html += `
          <div class="app-card" onclick="openApp('${app.url}')" style="animation-delay: ${index * 0.1}s">
            <img src="${app.photo}" alt="${app.name}" class="app-icon" onerror="this.src='https://via.placeholder.com/80/667eea/FFFFFF?text=${app.name.charAt(0)}'">
            <div class="app-name">${app.name}</div>
            <div class="app-owner">
              <span>üë§</span>
              <span>${app.owner}</span>
            </div>
            ${isAdmin ? `
              <div class="app-actions">
                <button class="btn-edit" onclick="editApp(event, '${app.name}', '${app.url}', '${app.photo}')" title="‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç">‚úèÔ∏è</button>
                <button class="btn-delete" onclick="deleteApp(event, '${app.name}')" title="‡∏•‡∏ö">üóëÔ∏è</button>
              </div>
            ` : ''}
          </div>
        `;
      });
      
      html += '</div>';
      container.innerHTML = html;
    }
    
    function openApp(url) {
      window.open(url, '_blank');
    }
    
    function openModal() {
      document.getElementById('modalTitle').textContent = '‚ú® ‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô‡πÉ‡∏´‡∏°‡πà';
      document.getElementById('modalDesc').textContent = '‡∏Å‡∏£‡∏≠‡∏Å‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô‡∏ó‡∏µ‡πà‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡πÄ‡∏û‡∏¥‡πà‡∏°';
      document.getElementById('submitBtn').textContent = '‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô';
      document.getElementById('editMode').value = 'false';
      document.getElementById('addForm').reset();
      document.getElementById('addModal').classList.add('show');
    }
    
    function closeModal() {
      document.getElementById('addModal').classList.remove('show');
      document.getElementById('addForm').reset();
    }
    
    function editApp(event, name, url, photo) {
      event.stopPropagation();
      
      document.getElementById('modalTitle').textContent = '‚úèÔ∏è ‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô';
      document.getElementById('modalDesc').textContent = '‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô';
      document.getElementById('submitBtn').textContent = '‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏Å‡∏≤‡∏£‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç';
      document.getElementById('editMode').value = 'true';
      document.getElementById('oldAppName').value = name;
      document.getElementById('appName').value = name;
      document.getElementById('appUrl').value = url;
      document.getElementById('appPhoto').value = photo;
      document.getElementById('addModal').classList.add('show');
    }
    
    document.getElementById('addForm').addEventListener('submit', function(e) {
      e.preventDefault();
      
      const name = document.getElementById('appName').value;
      const url = document.getElementById('appUrl').value;
      const photo = document.getElementById('appPhoto').value;
      const isEdit = document.getElementById('editMode').value === 'true';
      const oldName = document.getElementById('oldAppName').value;
      
      if (isEdit) {
        google.script.run
          .withSuccessHandler(function(result) {
            if (result.success) {
              showMessage('‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à! ‚úÖ', 'success');
              closeModal();
              loadApps();
            } else {
              showMessage(result.message || '‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î', 'error');
            }
          })
          .withFailureHandler(function(error) {
            showMessage('‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ' + error, 'error');
          })
          .updateApp(oldName, name, url, photo);
      } else {
        google.script.run
          .withSuccessHandler(function(result) {
            if (result.success) {
              showMessage('‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à! üéâ', 'success');
              closeModal();
              loadApps();
            } else {
              showMessage(result.message || '‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î', 'error');
            }
          })
          .withFailureHandler(function(error) {
            showMessage('‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ' + error, 'error');
          })
          .addApp(name, url, photo);
      }
    });
    
    function deleteApp(event, name) {
      event.stopPropagation();
      
      if (!confirm('‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡∏•‡∏ö‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô "' + name + '" ‡πÉ‡∏ä‡πà‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà?')) {
        return;
      }
      
      google.script.run
        .withSuccessHandler(function(result) {
          if (result.success) {
            showMessage('‡∏•‡∏ö‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à! ‚úÖ', 'success');
            loadApps();
          } else {
            showMessage(result.message || '‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î', 'error');
          }
        })
        .withFailureHandler(function(error) {
          showMessage('‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ' + error, 'error');
        })
        .deleteApp(name);
    }
    
    // ========== Request Access Modal ==========
function openRequestModal() {
  document.getElementById('requestModal').classList.add('show');
  loadAvailableApps();
}
    
    function closeRequestModal() {
      document.getElementById('requestModal').classList.remove('show');
      document.getElementById('requestForm').reset();
    }
    
    document.getElementById('requestForm').addEventListener('submit', function(e) {
      e.preventDefault();
      
      const name = document.getElementById('requestName').value;
      const note = document.getElementById('requestNote').value;
      
      google.script.run
        .withSuccessHandler(function(result) {
          if (result.success) {
            showMessage('‡∏™‡πà‡∏á‡∏Ñ‡∏≥‡∏Ç‡∏≠‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à! ‡∏£‡∏≠‡∏Å‡∏≤‡∏£‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥‡∏à‡∏≤‡∏Å Admin ‚úÖ', 'success');
            closeRequestModal();
          } else {
            showMessage(result.message || '‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î', 'error');
          }
        })
        .withFailureHandler(function(error) {
          showMessage('‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ' + error, 'error');
        })
        .requestAccess(name, note);
    });
    
    // ========== Report Modal ==========
    function openReportModal() {
      document.getElementById('reportModal').classList.add('show');
    }
    
    function closeReportModal() {
      document.getElementById('reportModal').classList.remove('show');
      document.getElementById('reportForm').reset();
    }
    
    document.getElementById('reportForm').addEventListener('submit', function(e) {
      e.preventDefault();
      
      const message = document.getElementById('reportMessage').value;
      
      google.script.run
        .withSuccessHandler(function(result) {
          if (result.success) {
            showMessage('‡∏™‡πà‡∏á‡∏£‡∏≤‡∏¢‡∏á‡∏≤‡∏ô‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à! ‡∏Ç‡∏≠‡∏ö‡∏Ñ‡∏∏‡∏ì‡∏ó‡∏µ‡πà‡πÅ‡∏à‡πâ‡∏á‡∏õ‡∏±‡∏ç‡∏´‡∏≤ ‚úÖ', 'success');
            closeReportModal();
          } else {
            showMessage(result.message || '‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î', 'error');
          }
        })
        .withFailureHandler(function(error) {
          showMessage('‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ' + error, 'error');
        })
        .sendReport(message);
    });
    
    // ========== Manage Permissions ==========
    function openManageModal() {
      document.getElementById('manageModal').classList.add('show');
      loadUsersAndApps();
    }
    
    function closeManageModal() {
      document.getElementById('manageModal').classList.remove('show');
      document.getElementById('newUserForm').classList.remove('show');
    }
    
    function loadUsersAndApps() {
      google.script.run
        .withSuccessHandler(function(apps) {
          allApps = apps;
          loadUsers();
        })
        .withFailureHandler(function(error) {
          showMessage('‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ' + error, 'error');
        })
        .getAllApps();
    }
    
    function loadUsers() {
      google.script.run
        .withSuccessHandler(function(users) {
          displayUsers(users);
          displayNewUserApps();
        })
        .withFailureHandler(function(error) {
          showMessage('‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ' + error, 'error');
        })
        .getAllUsers();
    }
    
function displayUsers(users) {
  const container = document.getElementById('usersList');
  
  if (!users || users.length === 0) {
    container.innerHTML = '<div class="empty-state"><h3>‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ</h3><p>‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏à‡∏±‡∏î‡∏Å‡∏≤‡∏£‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå</p></div>';
    return;
  }
  
  let html = '';
  
  users.forEach(function(user, index) {
    const isPending = user.apps.length === 0;
    
    // ‚úÖ ‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç‡∏ï‡∏£‡∏á‡∏ô‡∏µ‡πâ - ‡πÅ‡∏õ‡∏•‡∏á‡πÄ‡∏õ‡πá‡∏ô String ‡∏Å‡πà‡∏≠‡∏ô
    const noteText = user.note ? String(user.note) : '';
    const hasRequest = noteText.includes('‡∏Ç‡∏≠‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå:');
    
    html += `
      <div class="user-item ${isPending ? 'pending-user' : ''}">
        <div class="user-email-display">
          ${user.email}
          ${isPending ? '<span class="pending-badge">‚è≥ ‡∏£‡∏≠‡∏Å‡∏≤‡∏£‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥</span>' : ''}
          ${hasRequest ? '<span class="pending-badge" style="background: #f59e0b;">üìù ‡∏°‡∏µ‡∏Ñ‡∏≥‡∏Ç‡∏≠‡πÉ‡∏´‡∏°‡πà</span>' : ''}
        </div>
        ${user.name ? `<div class="user-detail"><strong>‡∏ä‡∏∑‡πà‡∏≠:</strong> ${user.name}</div>` : ''}
        ${noteText ? `<div class="user-detail" style="white-space: pre-wrap;"><strong>‡∏´‡∏°‡∏≤‡∏¢‡πÄ‡∏´‡∏ï‡∏∏:</strong> ${noteText}</div>` : ''}
        
        <div class="checkbox-item" style="margin-top: 10px; margin-bottom: 10px;">
          <input type="checkbox" id="sendEmail${index}" checked>
          <label for="sendEmail${index}">üìß ‡∏™‡πà‡∏á‡∏≠‡∏µ‡πÄ‡∏°‡∏•‡πÅ‡∏à‡πâ‡∏á‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ</label>
        </div>
        
        <div class="user-actions-btn">
          <button class="btn-save-user" onclick="saveUserPermissions('${user.email}', ${index})">üíæ ‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥‡πÅ‡∏•‡∏∞‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å</button>
          <button class="btn-delete-user" onclick="deleteUser('${user.email}')">üóëÔ∏è ‡∏•‡∏ö</button>
        </div>
        <div class="apps-checkboxes" id="userApps${index}">
    `;
    
    allApps.forEach(function(app) {
      const checked = user.apps.includes(app) ? 'checked' : '';
      html += `
        <div class="checkbox-item">
          <input type="checkbox" id="user${index}_${app}" value="${app}" ${checked}>
          <label for="user${index}_${app}">${app}</label>
        </div>
      `;
    });
    
    html += `
        </div>
      </div>
    `;
  });
  
  container.innerHTML = html;
}
    
    function displayNewUserApps() {
      const container = document.getElementById('newUserApps');
      let html = '';
      
      allApps.forEach(function(app) {
        html += `
          <div class="checkbox-item">
            <input type="checkbox" id="newUser_${app}" value="${app}">
            <label for="newUser_${app}">${app}</label>
          </div>
        `;
      });
      
      container.innerHTML = html;
    }
    
    function toggleNewUserForm() {
      const form = document.getElementById('newUserForm');
      form.classList.toggle('show');
      if (!form.classList.contains('show')) {
        document.getElementById('newUserEmail').value = '';
        const checkboxes = document.querySelectorAll('#newUserApps input[type="checkbox"]');
        checkboxes.forEach(cb => cb.checked = false);
      }
    }
    
    function addNewUser() {
      const email = document.getElementById('newUserEmail').value.trim();
      
      if (!email) {
        showMessage('‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏Å‡∏£‡∏≠‡∏Å‡∏≠‡∏µ‡πÄ‡∏°‡∏•', 'error');
        return;
      }
      
      const selectedApps = [];
      const checkboxes = document.querySelectorAll('#newUserApps input[type="checkbox"]:checked');
      checkboxes.forEach(cb => selectedApps.push(cb.value));
      
      google.script.run
        .withSuccessHandler(function(result) {
          if (result.success) {
            showMessage('‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à! ‚úÖ', 'success');
            toggleNewUserForm();
            loadUsers();
          } else {
            showMessage(result.message || '‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î', 'error');
          }
        })
        .withFailureHandler(function(error) {
          showMessage('‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ' + error, 'error');
        })
        .updateUserPermissions(email, selectedApps);
    }
    
    function saveUserPermissions(email, index) {
  const selectedApps = [];
  const checkboxes = document.querySelectorAll(`#userApps${index} input[type="checkbox"]:checked`);
  checkboxes.forEach(cb => selectedApps.push(cb.value));
  
  // ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏ß‡πà‡∏≤‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡∏™‡πà‡∏á‡∏≠‡∏µ‡πÄ‡∏°‡∏•‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà
  const sendEmail = document.getElementById('sendEmail' + index).checked;
  
  google.script.run
    .withSuccessHandler(function(result) {
      if (result.success) {
        showMessage('‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à!' + (sendEmail ? ' ‡πÅ‡∏•‡∏∞‡∏™‡πà‡∏á‡∏≠‡∏µ‡πÄ‡∏°‡∏•‡πÅ‡∏à‡πâ‡∏á‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ‡πÅ‡∏•‡πâ‡∏ß' : '') + ' ‚úÖ', 'success');
        loadUsers();
      } else {
        showMessage(result.message || '‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î', 'error');
      }
    })
    .withFailureHandler(function(error) {
      showMessage('‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ' + error, 'error');
    })
    .updateUserPermissions(email, selectedApps, sendEmail);
}
    
    function deleteUser(email) {
      if (!confirm('‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡∏•‡∏ö‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ "' + email + '" ‡πÉ‡∏ä‡πà‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà?')) {
        return;
      }
      
      google.script.run
        .withSuccessHandler(function(result) {
          if (result.success) {
            showMessage('‡∏•‡∏ö‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à! ‚úÖ', 'success');
            loadUsers();
          } else {
            showMessage(result.message || '‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î', 'error');
          }
        })
        .withFailureHandler(function(error) {
          showMessage('‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ' + error, 'error');
        })
        .deleteUser(email);
    }
    
    function showMessage(text, type) {
      const messageDiv = document.getElementById('message');
      messageDiv.textContent = text;
      messageDiv.className = 'message ' + type + ' show';
      
      setTimeout(function() {
        messageDiv.classList.remove('show');
      }, 3000);
    }
    
    function debugUser() {
      google.script.run
        .withSuccessHandler(function(result) {
          alert('Current User: ' + result.currentUser + '\n' +
                'Effective User: ' + result.effectiveUser + '\n' +
                'Final User Email: ' + result.userEmail);
        })
        .withFailureHandler(function(error) {
          alert('Error: ' + error);
        })
        .debugUserInfo();
    }

    

// ‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏õ‡∏∏‡πà‡∏°‡∏ó‡∏î‡∏™‡∏≠‡∏ö‡∏ä‡∏±‡πà‡∏ß‡∏Ñ‡∏£‡∏≤‡∏ß

function getReports() {
  const sheet = SpreadsheetApp.getActiveSpreadsheet().getSheetByName("Reports");
  if (!sheet) return null;

  const data = sheet.getDataRange().getValues();
  return data.length > 1 ? data : null;
}

// ========== New Link Modal ==========
function openNewLinkModal() {
  // ‡∏î‡∏∂‡∏á URL ‡πÄ‡∏î‡∏¥‡∏°‡∏°‡∏≤‡πÅ‡∏™‡∏î‡∏á‡∏Å‡πà‡∏≠‡∏ô
  google.script.run
    .withSuccessHandler(function(currentUrl) {
      document.getElementById('currentLinkDisplay').textContent = currentUrl || '‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏•‡∏¥‡∏á‡∏Ñ‡πå‡πÉ‡∏ô‡∏£‡∏∞‡∏ö‡∏ö';
      document.getElementById('newLinkModal').classList.add('show');
    })
    .getWebAppUrl();
}

function closeNewLinkModal() {
  document.getElementById('newLinkModal').classList.remove('show');
  document.getElementById('newLinkForm').reset();
}

document.getElementById('newLinkForm').addEventListener('submit', function(e) {
  e.preventDefault();
  
  const newUrl = document.getElementById('newLinkUrl').value.trim();
  
  if (!newUrl) {
    showMessage('‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏Å‡∏£‡∏≠‡∏Å‡∏•‡∏¥‡∏á‡∏Ñ‡πå', 'error');
    return;
  }
  
  if (!newUrl.startsWith('http://') && !newUrl.startsWith('https://')) {
    showMessage('‡∏•‡∏¥‡∏á‡∏Ñ‡πå‡πÑ‡∏°‡πà‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÉ‡∏™‡πà‡∏•‡∏¥‡∏á‡∏Ñ‡πå‡∏ó‡∏µ‡πà‡∏Ç‡∏∂‡πâ‡∏ô‡∏ï‡πâ‡∏ô‡∏î‡πâ‡∏ß‡∏¢ http:// ‡∏´‡∏£‡∏∑‡∏≠ https://', 'error');
    return;
  }
  
  if (!confirm('‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï‡∏•‡∏¥‡∏á‡∏Ñ‡πå‡πÅ‡∏•‡∏∞‡∏™‡πà‡∏á‡∏≠‡∏µ‡πÄ‡∏°‡∏•‡πÅ‡∏à‡πâ‡∏á‡∏ó‡∏∏‡∏Å‡∏Ñ‡∏ô‡πÉ‡∏ä‡πà‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà?')) {
    return;
  }
  
  showMessage('‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï‡πÅ‡∏•‡∏∞‡∏™‡πà‡∏á‡∏≠‡∏µ‡πÄ‡∏°‡∏•... ‚è≥', 'success');
  
  google.script.run
    .withSuccessHandler(function(result) {
      if (result.success) {
        showMessage(`‚úÖ ‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à! ‡∏™‡πà‡∏á‡∏≠‡∏µ‡πÄ‡∏°‡∏•: ${result.successCount}/${result.totalCount} ‡∏Ñ‡∏ô`, 'success');
        closeNewLinkModal();
      } else {
        showMessage(result.message || '‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î', 'error');
      }
    })
    .withFailureHandler(function(error) {
      showMessage('‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ' + error, 'error');
    })
    .updateLinkAndNotifyUsers(newUrl);
});


function loadAvailableApps() {
  const container = document.getElementById('requestAppsCheckboxes');
  container.innerHTML = '<div class="loading"><p style="color: #666; font-size: 14px;">‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÇ‡∏´‡∏•‡∏î‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£‡πÅ‡∏≠‡∏õ...</p></div>';
  
  google.script.run
    .withSuccessHandler(function(apps) {
      if (!apps || apps.length === 0) {
        container.innerHTML = '<div style="text-align: center; padding: 20px; color: #999;">‚úÖ ‡∏Ñ‡∏∏‡∏ì‡∏°‡∏µ‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô‡∏Ñ‡∏£‡∏ö‡∏ó‡∏∏‡∏Å‡πÅ‡∏≠‡∏õ‡πÅ‡∏•‡πâ‡∏ß</div>';
        return;
      }
      
      let html = '';
      apps.forEach(function(app, index) {
        html += `
          <div class="checkbox-item">
            <input type="checkbox" id="reqApp${index}" value="${app}">
            <label for="reqApp${index}">${app}</label>
          </div>
        `;
      });
      
      container.innerHTML = html;
    })
    .withFailureHandler(function(error) {
      container.innerHTML = '<div style="text-align: center; padding: 20px; color: #ef4444;">‚ùå ‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î</div>';
      showMessage('‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ' + error, 'error');
    })
    .getAvailableAppsForUser();
}

// ‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç Event Listener ‡∏Ç‡∏≠‡∏á requestForm
// ‡∏Ñ‡πâ‡∏ô‡∏´‡∏≤‡∏™‡πà‡∏ß‡∏ô‡∏ô‡∏µ‡πâ
document.getElementById('requestForm').addEventListener('submit', function(e) {
  e.preventDefault();
  
  const name = document.getElementById('requestName').value.trim();
  const note = document.getElementById('requestNote').value.trim();
  
  // ‡∏£‡∏ß‡∏ö‡∏£‡∏ß‡∏°‡πÅ‡∏≠‡∏õ‡∏ó‡∏µ‡πà‡πÄ‡∏•‡∏∑‡∏≠‡∏Å
  const selectedApps = [];
  const checkboxes = document.querySelectorAll('#requestAppsCheckboxes input[type="checkbox"]:checked');
  checkboxes.forEach(cb => selectedApps.push(cb.value));
  
  // ‚úÖ ‡πÄ‡∏û‡∏¥‡πà‡∏° Console log ‡∏ï‡∏£‡∏á‡∏ô‡∏µ‡πâ
  console.log('=== Request Form Submit ===');
  console.log('Name:', name);
  console.log('Note:', note);
  console.log('Selected Apps:', selectedApps);
  
  if (selectedApps.length === 0) {
    showMessage('‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡πÅ‡∏≠‡∏õ‡∏≠‡∏¢‡πà‡∏≤‡∏á‡∏ô‡πâ‡∏≠‡∏¢ 1 ‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£', 'error');
    return;
  }
  
  // ‚úÖ ‡πÄ‡∏û‡∏¥‡πà‡∏° log ‡∏Å‡πà‡∏≠‡∏ô‡πÄ‡∏£‡∏µ‡∏¢‡∏Å Google Apps Script
  console.log('Calling requestAccess...');
  
  google.script.run
    .withSuccessHandler(function(result) {
      console.log('‚úÖ Success:', result); // ‚úÖ ‡πÄ‡∏û‡∏¥‡πà‡∏° log
      if (result.success) {
        showMessage(result.message || '‡∏™‡πà‡∏á‡∏Ñ‡∏≥‡∏Ç‡∏≠‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à! ‡∏£‡∏≠‡∏Å‡∏≤‡∏£‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥‡∏à‡∏≤‡∏Å Admin ‚úÖ', 'success');
        closeRequestModal();
        
        // Reload ‡∏´‡∏ô‡πâ‡∏≤‡∏à‡∏≠‡πÄ‡∏û‡∏∑‡πà‡∏≠‡πÉ‡∏´‡πâ‡πÄ‡∏´‡πá‡∏ô‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞‡∏•‡πà‡∏≤‡∏™‡∏∏‡∏î
        setTimeout(function() {
          loadApps();
        }, 1000);
      } else {
        showMessage(result.message || '‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î', 'error');
      }
    })
    .withFailureHandler(function(error) {
      console.error('‚ùå Failure:', error); // ‚úÖ ‡πÄ‡∏û‡∏¥‡πà‡∏° log
      showMessage('‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ' + error, 'error');
    })
    .requestAccess(name, note, selectedApps);
});

// ‡πÄ‡∏û‡∏¥‡πà‡∏°‡πÉ‡∏ô <script> ‡∏î‡πâ‡∏≤‡∏ô‡∏•‡πà‡∏≤‡∏á

// ========== View App Requests ==========
function openViewRequestsModal() {
  console.log('Opening view requests modal...');
  document.getElementById('viewRequestsModal').classList.add('show');
  loadAppRequests();
}

function closeViewRequestsModal() {
  document.getElementById('viewRequestsModal').classList.remove('show');
}

function loadAppRequests() {
  console.log('=== loadAppRequests START ===');
  
  const loadingHtml = `
    <div class="loading">
      <div class="spinner"></div>
      <p>‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÇ‡∏´‡∏•‡∏î‡∏Ñ‡∏≥‡∏Ç‡∏≠...</p>
    </div>
  `;
  document.getElementById('requestsList').innerHTML = loadingHtml;
  
  google.script.run
    .withSuccessHandler(function(requests) {
      console.log('=== SUCCESS ===');
      console.log('Requests received:', requests);
      displayAppRequests(requests);
    })
    .withFailureHandler(function(error) {
      console.error('=== FAILURE ===');
      console.error('Error:', error);
      showMessage('‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ' + error.message, 'error');
      document.getElementById('requestsList').innerHTML = `
        <div class="empty-state">
          <h3>‚ùå ‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î</h3>
          <p>${error.message || error}</p>
        </div>
      `;
    })
    .getAllAppRequests();
}

function displayAppRequests(requests) {
  const container = document.getElementById('requestsList');
  
  console.log('=== Display App Requests ===');
  console.log('Type:', typeof requests);
  console.log('Is Array:', Array.isArray(requests));
  console.log('Length:', requests ? requests.length : 'null');
  
  if (!Array.isArray(requests)) {
    console.error('Requests is not an array:', typeof requests);
    container.innerHTML = `
      <div class="empty-state">
        <h3>‚ö†Ô∏è ‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÑ‡∏°‡πà‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á</h3>
        <p>‡∏£‡∏π‡∏õ‡πÅ‡∏ö‡∏ö‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏Ñ‡∏≥‡∏Ç‡∏≠‡πÑ‡∏°‡πà‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á</p>
      </div>
    `;
    return;
  }
  
  if (requests.length === 0) {
    console.log('No requests found');
    container.innerHTML = `
      <div class="empty-state">
        <h3>üìù ‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏Ñ‡∏≥‡∏Ç‡∏≠</h3>
        <p>‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ‡∏Ç‡∏≠‡πÄ‡∏Ç‡πâ‡∏≤‡πÉ‡∏ä‡πâ‡∏£‡∏∞‡∏ö‡∏ö</p>
      </div>
    `;
    return;
  }
  
  console.log('Rendering ' + requests.length + ' requests');
  
  let html = '';
  
  requests.forEach(function(request) {
    const timestamp = request.timestamp || new Date();
    const userEmail = String(request.userEmail || '');
    const name = String(request.name || '');
    const requestedApps = String(request.requestedApps || '');
    const note = String(request.note || '');
    const status = String(request.status || '‡∏£‡∏≠‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥');
    
    const statusClass = status.includes('‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥‡πÅ‡∏•‡πâ‡∏ß') ? 'done' : 
                       status.includes('‡∏õ‡∏è‡∏¥‡πÄ‡∏™‡∏ò') ? 'rejected' : 'pending';
    const itemClass = status.includes('‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥‡πÅ‡∏•‡πâ‡∏ß') ? 'status-done' : 
                     status.includes('‡∏õ‡∏è‡∏¥‡πÄ‡∏™‡∏ò') ? 'status-rejected' : 'status-pending';
    
    const safeNote = note.replace(/</g, '&lt;').replace(/>/g, '&gt;');
    const safeApps = requestedApps.replace(/</g, '&lt;').replace(/>/g, '&gt;');
    
    const escapedUserEmail = userEmail.replace(/'/g, "&#39;").replace(/"/g, "&quot;");
    const escapedApps = safeApps.replace(/'/g, "&#39;").replace(/"/g, "&quot;");
    
    html += `
      <div class="report-item ${itemClass}">
        <div class="report-header">
          <div>
            <span class="report-user">üë§ ${userEmail}</span>
            <span class="report-status ${statusClass}">${status}</span>
          </div>
          <span class="report-time">‚è∞ ${new Date(timestamp).toLocaleString('th-TH')}</span>
        </div>
        
        ${name ? `<div style="font-size: 14px; color: #666; margin: 8px 0;"><strong>‡∏ä‡∏∑‡πà‡∏≠:</strong> ${name}</div>` : ''}
        
        <div class="report-message">
          <strong>üì± ‡πÅ‡∏≠‡∏õ‡∏ó‡∏µ‡πà‡∏Ç‡∏≠‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô:</strong><br>
          ${safeApps.split(', ').map(app => {
            const cleanApp = app.trim();
            return cleanApp ? `<span style="display: inline-block; background: #667eea; color: white; padding: 4px 12px; border-radius: 15px; margin: 4px 4px 4px 0; font-size: 13px;">‚úì ${cleanApp}</span>` : '';
          }).join('')}
        </div>
        
        ${safeNote ? `
          <div style="background: #f8f9fa; padding: 12px; border-radius: 8px; margin-top: 10px; border-left: 3px solid #667eea;">
            <div style="font-size: 12px; color: #667eea; font-weight: 600; margin-bottom: 5px;">üìù ‡∏´‡∏°‡∏≤‡∏¢‡πÄ‡∏´‡∏ï‡∏∏:</div>
            <div style="color: #333; white-space: pre-wrap;">${safeNote}</div>
          </div>
        ` : ''}
        
        ${status === '‡∏£‡∏≠‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥' ? `
          <div class="report-actions">
            <button class="btn-reply" onclick="approveRequest(${request.rowIndex}, '${escapedUserEmail}', '${escapedApps}')">
              ‚úÖ ‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥‡πÅ‡∏•‡∏∞‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå
            </button>
            <button class="btn-delete-report" style="background: #f59e0b;" onclick="openRejectRequestModal(${request.rowIndex}, '${escapedUserEmail}')">
              ‚ùå ‡∏õ‡∏è‡∏¥‡πÄ‡∏™‡∏ò
            </button>
            <button class="btn-delete-report" onclick="deleteRequestItem(${request.rowIndex})">
              üóëÔ∏è ‡∏•‡∏ö
            </button>
          </div>
        ` : `
          <div class="report-actions">
            <button class="btn-delete-report" onclick="deleteRequestItem(${request.rowIndex})">
              üóëÔ∏è ‡∏•‡∏ö
            </button>
          </div>
        `}
      </div>
    `;
  });
  
  container.innerHTML = html;
  console.log('Display completed');
}

function approveRequest(rowIndex, userEmail, requestedApps) {
  if (!confirm('‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥‡∏Ñ‡∏≥‡∏Ç‡∏≠‡πÅ‡∏•‡∏∞‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡πÉ‡∏´‡πâ‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ‡∏ô‡∏µ‡πâ‡πÉ‡∏ä‡πà‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà?')) {
    return;
  }
  
  showMessage('‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥‡πÅ‡∏•‡∏∞‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå... ‚è≥', 'success');
  
  google.script.run
    .withSuccessHandler(function(result) {
      if (result.success) {
        showMessage('‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥‡πÅ‡∏•‡∏∞‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à! ‚úÖ', 'success');
        loadAppRequests();
        loadPendingCounts(); // ‚úÖ ‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏ö‡∏£‡∏£‡∏ó‡∏±‡∏î‡∏ô‡∏µ‡πâ
      } else {
        showMessage(result.message || '‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î', 'error');
      }
    })
    .withFailureHandler(function(error) {
      showMessage('‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ' + error, 'error');
    })
    .approveAppRequest(rowIndex, userEmail, requestedApps);
}

function openRejectRequestModal(rowIndex, userEmail) {
  document.getElementById('rejectRowIndex').value = rowIndex;
  document.getElementById('rejectUserEmail').value = userEmail;
  document.getElementById('rejectRequestModal').classList.add('show');
}

function closeRejectRequestModal() {
  document.getElementById('rejectRequestModal').classList.remove('show');
  document.getElementById('rejectRequestForm').reset();
}

document.getElementById('rejectRequestForm').addEventListener('submit', function(e) {
  e.preventDefault();
  
  const rowIndex = parseInt(document.getElementById('rejectRowIndex').value);
  const userEmail = document.getElementById('rejectUserEmail').value;
  const reason = document.getElementById('rejectReason').value;
  
  google.script.run
    .withSuccessHandler(function(result) {
      if (result.success) {
        showMessage('‡∏õ‡∏è‡∏¥‡πÄ‡∏™‡∏ò‡∏Ñ‡∏≥‡∏Ç‡∏≠‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à! ‚úÖ', 'success');
        closeRejectRequestModal();
        loadAppRequests();
      } else {
        showMessage(result.message || '‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î', 'error');
      }
    })
    .withFailureHandler(function(error) {
      showMessage('‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ' + error, 'error');
    })
    .rejectAppRequest(rowIndex, userEmail, reason);
});

function deleteRequestItem(rowIndex) {
  if (!confirm('‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡∏•‡∏ö‡∏Ñ‡∏≥‡∏Ç‡∏≠‡∏ô‡∏µ‡πâ‡πÉ‡∏ä‡πà‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà?')) {
    return;
  }
  
  google.script.run
    .withSuccessHandler(function(result) {
      if (result.success) {
        showMessage('‡∏•‡∏ö‡∏Ñ‡∏≥‡∏Ç‡∏≠‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à! ‚úÖ', 'success');
        loadAppRequests();
      } else {
        showMessage(result.message || '‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î', 'error');
      }
    })
    .withFailureHandler(function(error) {
      showMessage('‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ' + error, 'error');
    })
    .deleteAppRequest(rowIndex);
}

// ‡∏•‡∏ö‡∏Ñ‡∏≥‡∏Ç‡∏≠
function deleteRequestItem(rowIndex) {
  if (!confirm('‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡∏•‡∏ö‡∏Ñ‡∏≥‡∏Ç‡∏≠‡∏ô‡∏µ‡πâ‡πÉ‡∏ä‡πà‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà?')) {
    return;
  }
  
  google.script.run
    .withSuccessHandler(function(result) {
      if (result.success) {
        showMessage('‡∏•‡∏ö‡∏Ñ‡∏≥‡∏Ç‡∏≠‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à! ‚úÖ', 'success');
        loadAppRequests();
      } else {
        showMessage(result.message || '‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î', 'error');
      }
    })
    .withFailureHandler(function(error) {
      showMessage('‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ' + error, 'error');
    })
    .deleteAppRequest(rowIndex);
}

function handleRequestSubmit(event) {
  event.preventDefault();
  
  console.log('=== Request Form Submit ===');
  
  const name = document.getElementById('requestName').value.trim();
  const note = document.getElementById('requestNote').value.trim();
  
  // ‡∏£‡∏ß‡∏ö‡∏£‡∏ß‡∏°‡πÅ‡∏≠‡∏õ‡∏ó‡∏µ‡πà‡πÄ‡∏•‡∏∑‡∏≠‡∏Å
  const selectedApps = [];
  const checkboxes = document.querySelectorAll('#requestAppsCheckboxes input[type="checkbox"]:checked');
  checkboxes.forEach(cb => selectedApps.push(cb.value));
  
  console.log('Name:', name);
  console.log('Note:', note);
  console.log('Selected Apps:', selectedApps);
  
  if (selectedApps.length === 0) {
    showMessage('‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡πÅ‡∏≠‡∏õ‡∏≠‡∏¢‡πà‡∏≤‡∏á‡∏ô‡πâ‡∏≠‡∏¢ 1 ‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£', 'error');
    return;
  }
  
  console.log('Calling requestAccess...');
  
  google.script.run
    .withSuccessHandler(function(result) {
      console.log('‚úÖ Success:', result);
      if (result.success) {
        showMessage(result.message || '‡∏™‡πà‡∏á‡∏Ñ‡∏≥‡∏Ç‡∏≠‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à! ‡∏£‡∏≠‡∏Å‡∏≤‡∏£‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥‡∏à‡∏≤‡∏Å Admin ‚úÖ', 'success');
        closeRequestModal();
        setTimeout(function() {
          loadApps();
        }, 1000);
      } else {
        showMessage(result.message || '‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î', 'error');
      }
    })
    .withFailureHandler(function(error) {
      console.error('‚ùå Failure:', error);
      showMessage('‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ' + error, 'error');
    })
    .requestAccess(name, note, selectedApps);
}

// ================================
// üëë ‡∏à‡∏±‡∏î‡∏Å‡∏≤‡∏£ Admin
// ================================

function openManageAdminsModal() {
  console.log('Opening manage admins modal...');
  document.getElementById('manageAdminsModal').classList.add('show');
  loadAdmins();
}

function closeManageAdminsModal() {
  document.getElementById('manageAdminsModal').classList.remove('show');
  document.getElementById('newAdminForm').classList.remove('show');
  document.getElementById('newAdminEmail').value = '';
}

function toggleAddAdminForm() {
  const form = document.getElementById('newAdminForm');
  form.classList.toggle('show');
  if (!form.classList.contains('show')) {
    document.getElementById('newAdminEmail').value = '';
  }
}

function loadAdmins() {
  console.log('Loading admins...');
  
  const loadingHtml = `
    <div class="loading">
      <div class="spinner"></div>
      <p>‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÇ‡∏´‡∏•‡∏î‡∏£‡∏≤‡∏¢‡∏ä‡∏∑‡πà‡∏≠ Admin...</p>
    </div>
  `;
  document.getElementById('adminsList').innerHTML = loadingHtml;
  
  google.script.run
    .withSuccessHandler(function(admins) {
      console.log('Admins loaded:', admins);
      displayAdmins(admins);
    })
    .withFailureHandler(function(error) {
      console.error('Error loading admins:', error);
      showMessage('‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ' + error, 'error');
      document.getElementById('adminsList').innerHTML = `
        <div class="empty-state">
          <h3>‚ùå ‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î</h3>
          <p>${error}</p>
        </div>
      `;
    })
    .getAllAdmins();
}

function displayAdmins(admins) {
  const container = document.getElementById('adminsList');
  
  if (!Array.isArray(admins)) {
    container.innerHTML = `
      <div class="empty-state">
        <h3>‚ö†Ô∏è ‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÑ‡∏°‡πà‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á</h3>
      </div>
    `;
    return;
  }
  
  if (admins.length === 0) {
    container.innerHTML = `
      <div class="empty-state">
        <h3>üëë ‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡∏°‡∏µ Admin</h3>
        <p>‡πÄ‡∏û‡∏¥‡πà‡∏° Admin ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏à‡∏±‡∏î‡∏Å‡∏≤‡∏£‡∏£‡∏∞‡∏ö‡∏ö</p>
      </div>
    `;
    return;
  }
  
  let html = '';
  
  admins.forEach(function(admin) {
    // ‚úÖ ‡∏Å‡∏≥‡∏´‡∏ô‡∏î‡∏™‡∏µ‡∏ï‡∏≤‡∏° Role
    const borderColor = admin.role.includes('Super Admin') ? '#dc2626' : '#f59e0b';
    const badgeColor = admin.role.includes('Super Admin') ? 
      'background: linear-gradient(135deg, #dc2626 0%, #991b1b 100%);' : 
      'background: #f59e0b;';
    
    html += `
      <div class="user-item" style="border-left: 4px solid ${borderColor};">
        <div class="user-email-display">
          ${admin.role.includes('Super Admin') ? 'üëë' : 'üë§'} ${admin.email}
          <span style="display: inline-block; ${badgeColor} color: white; padding: 4px 12px; border-radius: 20px; font-size: 12px; font-weight: 600; margin-left: 10px;">
            ${admin.role}
          </span>
        </div>
        
        ${admin.addedDate !== '-' ? `
          <div class="user-detail">
            <strong>üìÖ ‡πÄ‡∏û‡∏¥‡πà‡∏°‡πÄ‡∏°‡∏∑‡πà‡∏≠:</strong> ${admin.addedDate}
          </div>
        ` : ''}
        
        ${admin.addedBy !== '-' ? `
          <div class="user-detail">
            <strong>üë§ ‡πÄ‡∏û‡∏¥‡πà‡∏°‡πÇ‡∏î‡∏¢:</strong> ${admin.addedBy}
          </div>
        ` : ''}
        
        ${admin.canDelete ? `
          <div class="user-actions-btn">
            <button class="btn-delete-user" onclick="removeAdminUser('${admin.email}')">
              üóëÔ∏è ‡∏•‡∏ö‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå Admin
            </button>
          </div>
        ` : `
          <div style="color: #999; font-size: 14px; margin-top: 10px; padding: 10px; background: #f5f6f7; border-radius: 8px;">
            ${admin.role.includes('Super Admin') ? 
              'üîí Super Admin ‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏ñ‡∏π‡∏Å‡∏•‡∏ö‡πÑ‡∏î‡πâ' : 
              'üîí ‡πÄ‡∏â‡∏û‡∏≤‡∏∞ Super Admin ‡πÄ‡∏ó‡πà‡∏≤‡∏ô‡∏±‡πâ‡∏ô‡∏ó‡∏µ‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏à‡∏±‡∏î‡∏Å‡∏≤‡∏£ Admin ‡πÑ‡∏î‡πâ'}
          </div>
        `}
      </div>
    `;
  });
  
  container.innerHTML = html;
}

function addNewAdmin() {
  const email = document.getElementById('newAdminEmail').value.trim();
  
  if (!email) {
    showMessage('‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏Å‡∏£‡∏≠‡∏Å‡∏≠‡∏µ‡πÄ‡∏°‡∏•', 'error');
    return;
  }
  
  if (!email.includes('@')) {
    showMessage('‡∏£‡∏π‡∏õ‡πÅ‡∏ö‡∏ö‡∏≠‡∏µ‡πÄ‡∏°‡∏•‡πÑ‡∏°‡πà‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á', 'error');
    return;
  }
  
  if (!confirm(`‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡πÄ‡∏û‡∏¥‡πà‡∏° "${email}" ‡πÄ‡∏õ‡πá‡∏ô Admin ‡πÉ‡∏ä‡πà‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà?\n\nAdmin ‡∏à‡∏∞‡∏°‡∏µ‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡πÄ‡∏ï‡πá‡∏°‡πÉ‡∏ô‡∏Å‡∏≤‡∏£‡∏à‡∏±‡∏î‡∏Å‡∏≤‡∏£‡∏£‡∏∞‡∏ö‡∏ö`)) {
    return;
  }
  
  showMessage('‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÄ‡∏û‡∏¥‡πà‡∏° Admin... ‚è≥', 'success');
  
  google.script.run
    .withSuccessHandler(function(result) {
      if (result.success) {
        showMessage('‡πÄ‡∏û‡∏¥‡πà‡∏° Admin ‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à! ‚úÖ', 'success');
        toggleAddAdminForm();
        loadAdmins();
      } else {
        showMessage(result.message || '‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î', 'error');
      }
    })
    .withFailureHandler(function(error) {
      showMessage('‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ' + error, 'error');
    })
    .addAdmin(email);
}

function removeAdminUser(email) {
  if (!confirm(`‚ö†Ô∏è ‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡∏•‡∏ö‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå Admin ‡∏Ç‡∏≠‡∏á "${email}" ‡πÉ‡∏ä‡πà‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà?\n\n‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ‡∏Ñ‡∏ô‡∏ô‡∏µ‡πâ‡∏à‡∏∞‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏à‡∏±‡∏î‡∏Å‡∏≤‡∏£‡∏£‡∏∞‡∏ö‡∏ö‡πÑ‡∏î‡πâ‡∏≠‡∏µ‡∏Å‡∏ï‡πà‡∏≠‡πÑ‡∏õ`)) {
    return;
  }
  
  showMessage('‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏•‡∏ö‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå Admin... ‚è≥', 'success');
  
  google.script.run
    .withSuccessHandler(function(result) {
      if (result.success) {
        showMessage('‡∏•‡∏ö‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå Admin ‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à! ‚úÖ', 'success');
        loadAdmins();
      } else {
        showMessage(result.message || '‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î', 'error');
      }
    })
    .withFailureHandler(function(error) {
      showMessage('‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ' + error, 'error');
    })
    .removeAdmin(email);
}
// ================================
// üìä ‡∏ô‡∏±‡∏ö‡∏à‡∏≥‡∏ô‡∏ß‡∏ô‡∏Ñ‡∏≥‡∏Ç‡∏≠‡πÅ‡∏•‡∏∞‡∏£‡∏≤‡∏¢‡∏á‡∏≤‡∏ô‡πÉ‡∏´‡∏°‡πà
// ================================

let refreshInterval = null;

// ‡πÇ‡∏´‡∏•‡∏î‡∏à‡∏≥‡∏ô‡∏ß‡∏ô‡∏Ñ‡∏≥‡∏Ç‡∏≠‡πÅ‡∏•‡∏∞‡∏£‡∏≤‡∏¢‡∏á‡∏≤‡∏ô‡πÉ‡∏´‡∏°‡πà

// ================================
// üìä Badge Counter System
// ================================

// Badge Counter Helper
const badgeCounter = {
  update: function(badgeId, count) {
    const badge = document.getElementById(badgeId);
    if (!badge) return;

    const safeCount = Math.max(0, parseInt(count) || 0);

    if (safeCount > 99) {
      badge.textContent = '99+';
      badge.classList.add('large');
    } else {
      badge.textContent = safeCount;
      badge.classList.remove('large');
    }

    badge.setAttribute('data-count', safeCount);

    if (safeCount === 0) {
      badge.classList.add('hidden');
    } else {
      badge.classList.remove('hidden');
    }

    badge.classList.add('pulse');
    setTimeout(() => badge.classList.remove('pulse'), 300);
  }
};

// ‡∏ï‡∏±‡∏ß‡πÅ‡∏õ‡∏£ Auto-refresh (‡∏õ‡∏£‡∏∞‡∏Å‡∏≤‡∏®‡∏Ñ‡∏£‡∏±‡πâ‡∏á‡πÄ‡∏î‡∏µ‡∏¢‡∏ß)
let badgeRefreshInterval = null;

// ‡πÇ‡∏´‡∏•‡∏î‡∏à‡∏≥‡∏ô‡∏ß‡∏ô‡∏Ñ‡∏≥‡∏Ç‡∏≠‡πÅ‡∏•‡∏∞‡∏£‡∏≤‡∏¢‡∏á‡∏≤‡∏ô‡πÉ‡∏´‡∏°‡πà
function loadPendingCounts() {
  if (!isAdmin) {
    return;
  }
  
  google.script.run
    .withSuccessHandler(function(counts) {
      console.log('üìä Pending counts:', counts);
      
      // ‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï Badge ‡∏Ñ‡∏≥‡∏Ç‡∏≠
      const badgeRequests = document.getElementById('badgeRequests');
      if (badgeRequests) {
        badgeCounter.update('badgeRequests', counts.requests);
      }
      
      // ‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï Badge ‡∏£‡∏≤‡∏¢‡∏á‡∏≤‡∏ô
      const badgeReports = document.getElementById('badgeReports');
      if (badgeReports) {
        badgeCounter.update('badgeReports', counts.reports);
      }
    })
    .withFailureHandler(function(error) {
      console.error('‚ùå Error loading pending counts:', error);
    })
    .getAllPendingCounts();
}

// ‡πÄ‡∏£‡∏¥‡πà‡∏° Auto-refresh ‡∏ó‡∏∏‡∏Å 30 ‡∏ß‡∏¥‡∏ô‡∏≤‡∏ó‡∏µ
function startBadgeAutoRefresh() {
  if (!isAdmin || badgeRefreshInterval) {
    return;
  }
  
  // ‡πÇ‡∏´‡∏•‡∏î‡∏Ñ‡∏£‡∏±‡πâ‡∏á‡πÅ‡∏£‡∏Å‡∏ó‡∏±‡∏ô‡∏ó‡∏µ
  loadPendingCounts();
  
  // Auto-refresh ‡∏ó‡∏∏‡∏Å 30 ‡∏ß‡∏¥‡∏ô‡∏≤‡∏ó‡∏µ
  badgeRefreshInterval = setInterval(function() {
    loadPendingCounts();
  }, 30000);
  
  console.log('‚úÖ Badge auto-refresh started (every 30 seconds)');
}

// ‡∏´‡∏¢‡∏∏‡∏î Auto-refresh
function stopBadgeAutoRefresh() {
  if (badgeRefreshInterval) {
    clearInterval(badgeRefreshInterval);
    badgeRefreshInterval = null;
    console.log('‚èπÔ∏è Badge auto-refresh stopped');
  }
}

// ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï Badge (iOS Native Style)
function updateBadge(element, count) {
  if (!element) return;
  
  // ‡πÄ‡∏ã‡πá‡∏ï data-count attribute
  element.setAttribute('data-count', count);
  
  if (count > 0) {
    // ‡πÅ‡∏™‡∏î‡∏á‡∏ï‡∏±‡∏ß‡πÄ‡∏•‡∏Ç (‡∏ñ‡πâ‡∏≤‡πÄ‡∏Å‡∏¥‡∏ô 99 ‡πÅ‡∏™‡∏î‡∏á 99+)
    if (count > 99) {
      element.textContent = '99+';
    } else {
      element.textContent = count;
    }
    
    element.classList.remove('hidden');
  } else {
    element.classList.add('hidden');
  }
}
// ‡πÄ‡∏£‡∏¥‡πà‡∏° Auto-refresh ‡∏ó‡∏∏‡∏Å 30 ‡∏ß‡∏¥‡∏ô‡∏≤‡∏ó‡∏µ
function startAutoRefresh() {
  if (!isAdmin || refreshInterval) {
    return;
  }
  
  // ‡πÇ‡∏´‡∏•‡∏î‡∏Ñ‡∏£‡∏±‡πâ‡∏á‡πÅ‡∏£‡∏Å‡∏ó‡∏±‡∏ô‡∏ó‡∏µ
  loadPendingCounts();
  
  // Auto-refresh ‡∏ó‡∏∏‡∏Å 30 ‡∏ß‡∏¥‡∏ô‡∏≤‡∏ó‡∏µ
  refreshInterval = setInterval(function() {
    loadPendingCounts();
  }, 30000);
  
  console.log('‚úÖ Auto-refresh started (every 30 seconds)');
}


  </script>

  
</body>
</html>
