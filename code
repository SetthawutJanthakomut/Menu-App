function doGet(e) {
  const page = e.parameter.page;
  
  if (page === 'manual') {
    return HtmlService.createHtmlOutputFromFile('manual')
      .setTitle('‡∏Ñ‡∏π‡πà‡∏°‡∏∑‡∏≠‡∏®‡∏π‡∏ô‡∏¢‡πå‡∏£‡∏ß‡∏°‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô')
      .setXFrameOptionsMode(HtmlService.XFrameOptionsMode.ALLOWALL);
  } else {
    return HtmlService.createHtmlOutputFromFile('index')
      .setTitle('‡∏®‡∏π‡∏ô‡∏¢‡πå‡∏£‡∏ß‡∏°‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô')
      .setXFrameOptionsMode(HtmlService.XFrameOptionsMode.ALLOWALL);
  }
}

function getApps() {
  const sheet = getOrCreateSheet();
  const lastRow = sheet.getLastRow();
  
  // ‡∏ñ‡πâ‡∏≤‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏• return ‡πÄ‡∏•‡∏¢
  if (lastRow <= 1) {
    const currentUser = Session.getActiveUser().getEmail();
    const effectiveUser = Session.getEffectiveUser().getEmail();
    const userEmail = currentUser || effectiveUser;
    const userIsAdmin = isAdmin(userEmail);
    
    return { 
      apps: [], 
      isAdmin: userIsAdmin, 
      userEmail: userEmail 
    };
  }
  
  const data = sheet.getRange(1, 1, lastRow, 4).getValues(); // ‡∏î‡∏∂‡∏á‡πÄ‡∏â‡∏û‡∏≤‡∏∞‡πÅ‡∏ñ‡∏ß‡∏ó‡∏µ‡πà‡∏°‡∏µ‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•
  const currentUser = Session.getActiveUser().getEmail();
  const effectiveUser = Session.getEffectiveUser().getEmail();
  const userEmail = currentUser || effectiveUser;
  const userIsAdmin = isAdmin(userEmail);
  
  // ‡∏î‡∏∂‡∏á permissions ‡∏Ç‡∏≠‡∏á user
  const userPermissions = getUserPermissions(userEmail);
  
  const apps = [];
  for (let i = 1; i < data.length; i++) {
    if (data[i][0]) {
      const appName = data[i][0];
      
      // ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏ß‡πà‡∏≤ user ‡∏°‡∏µ‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡πÄ‡∏Ç‡πâ‡∏≤‡∏ñ‡∏∂‡∏á‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà
      const hasAccess = userIsAdmin || 
                       data[i][3] === userEmail || 
                       userPermissions.includes(appName);
      
      if (hasAccess) {
        apps.push({
          name: appName,
          url: data[i][1],
          photo: data[i][2],
          owner: data[i][3] || '',
          isOwner: data[i][3] === userEmail,
          isAdmin: userIsAdmin
        });
      }
    }
  }
  return { 
    apps: apps, 
    isAdmin: userIsAdmin,
    userEmail: userEmail
  };
}

function getCurrentUser() {
  const currentUser = Session.getActiveUser().getEmail();
  const effectiveUser = Session.getEffectiveUser().getEmail();
  return currentUser || effectiveUser || '‡πÑ‡∏°‡πà‡∏ó‡∏£‡∏≤‡∏ö‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ';
}
// ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏ß‡πà‡∏≤‡πÄ‡∏õ‡πá‡∏ô Super Admin ‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà (‡πÄ‡∏°‡∏•‡∏´‡∏•‡∏±‡∏Å)
function isSuperAdmin(email) {
  if (!email) {
    const currentUser = Session.getActiveUser().getEmail();
    const effectiveUser = Session.getEffectiveUser().getEmail();
    email = currentUser || effectiveUser;
  }
  
  const superAdminEmail = 'setthawut.se11@gmail.com';
  return email && email.toLowerCase() === superAdminEmail.toLowerCase();
}

// ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏ß‡πà‡∏≤‡πÄ‡∏õ‡πá‡∏ô Admin ‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà (‡∏£‡∏ß‡∏° Super Admin)
function isAdmin(email) {
  if (!email) {
    const currentUser = Session.getActiveUser().getEmail();
    const effectiveUser = Session.getEffectiveUser().getEmail();
    email = currentUser || effectiveUser;
  }
  
  // Super Admin ‡πÄ‡∏õ‡πá‡∏ô Admin ‡πÇ‡∏î‡∏¢‡∏≠‡∏±‡∏ï‡πÇ‡∏ô‡∏°‡∏±‡∏ï‡∏¥
  if (isSuperAdmin(email)) {
    return true;
  }
  
  const ss = SpreadsheetApp.getActiveSpreadsheet();
  let adminSheet = ss.getSheetByName('Admins');
  
  if (!adminSheet) {
    adminSheet = ss.insertSheet('Admins');
    adminSheet.appendRow(['AdminEmail', 'AddedDate', 'AddedBy', 'Role']);
    adminSheet.appendRow(['setthawut.se11@gmail.com', new Date(), 'System', 'Super Admin']);
    
    const headerRange = adminSheet.getRange('A1:D1');
    headerRange.setBackground('#667eea');
    headerRange.setFontColor('#FFFFFF');
    headerRange.setFontWeight('bold');
    headerRange.setHorizontalAlignment('center');
    
    adminSheet.setColumnWidth(1, 250);
    adminSheet.setColumnWidth(2, 150);
    adminSheet.setColumnWidth(3, 200);
    adminSheet.setColumnWidth(4, 120);
    
    Logger.log('‚úÖ ‡∏™‡∏£‡πâ‡∏≤‡∏á Sheet Admins ‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à');
  }
  
  const data = adminSheet.getDataRange().getValues();
  for (let i = 1; i < data.length; i++) {
    if (data[i][0] && data[i][0].toLowerCase() === email.toLowerCase()) {
      return true;
    }
  }
  
  return false;
}

function getUserPermissions(email) {
  const ss = SpreadsheetApp.getActiveSpreadsheet();
  let permSheet = ss.getSheetByName('Permission');
  
  if (!permSheet) {
    permSheet = ss.insertSheet('Permission');
    permSheet.appendRow(['UserEmail', 'Apps']);
    return [];
  }
  
  const data = permSheet.getDataRange().getValues();
  for (let i = 1; i < data.length; i++) {
    if (data[i][0] && data[i][0].toLowerCase() === email.toLowerCase()) {
      if (data[i][1]) {
        try {
          return JSON.parse(data[i][1]);
        } catch (e) {
          return [];
        }
      }
      return [];
    }
  }
  return [];
}

function addApp(name, url, photo) {
  const currentUser = Session.getActiveUser().getEmail();
  const effectiveUser = Session.getEffectiveUser().getEmail();
  const userEmail = currentUser || effectiveUser;
  
  if (!isAdmin(userEmail)) {
    return { success: false, message: '‡∏Ñ‡∏∏‡∏ì‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô' };
  }
  
  const sheet = getOrCreateSheet();
  const owner = userEmail;
  sheet.appendRow([name, url, photo, owner]);
  return { success: true };
}

function updateApp(oldName, name, url, photo) {
  const currentUser = Session.getActiveUser().getEmail();
  const effectiveUser = Session.getEffectiveUser().getEmail();
  const userEmail = currentUser || effectiveUser;
  
  if (!isAdmin(userEmail)) {
    return { success: false, message: '‡∏Ñ‡∏∏‡∏ì‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô' };
  }
  
  const sheet = getOrCreateSheet();
  const data = sheet.getDataRange().getValues();
  
  for (let i = 1; i < data.length; i++) {
    if (data[i][0] === oldName) {
      sheet.getRange(i + 1, 1).setValue(name);
      sheet.getRange(i + 1, 2).setValue(url);
      sheet.getRange(i + 1, 3).setValue(photo);
      
      // ‡∏´‡∏≤‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ‡∏ó‡∏µ‡πà‡∏°‡∏µ‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡πÄ‡∏Ç‡πâ‡∏≤‡∏ñ‡∏∂‡∏á‡πÅ‡∏≠‡∏õ‡∏ô‡∏µ‡πâ
      const users = getUsersWithAccessToApp(oldName);
      
      // ‡∏ñ‡πâ‡∏≤‡∏°‡∏µ‡∏Å‡∏≤‡∏£‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡∏ä‡∏∑‡πà‡∏≠‡πÅ‡∏≠‡∏õ ‡∏ï‡πâ‡∏≠‡∏á‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï‡πÉ‡∏ô Permission sheet ‡∏î‡πâ‡∏ß‡∏¢
      if (oldName !== name) {
        updateAppNameInPermissions(oldName, name);
      }
      
      // ‡∏™‡πà‡∏á‡∏≠‡∏µ‡πÄ‡∏°‡∏•‡πÅ‡∏à‡πâ‡∏á‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ
      if (users.length > 0) {
        notifyAppUpdate(name, url, users);
      }
      
      return { success: true };
    }
  }
  return { success: false, message: '‡πÑ‡∏°‡πà‡∏û‡∏ö‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô' };
}

// ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï‡∏ä‡∏∑‡πà‡∏≠‡πÅ‡∏≠‡∏õ‡πÉ‡∏ô Permission sheet ‡πÄ‡∏°‡∏∑‡πà‡∏≠‡∏°‡∏µ‡∏Å‡∏≤‡∏£‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡∏ä‡∏∑‡πà‡∏≠
function updateAppNameInPermissions(oldName, newName) {
  const ss = SpreadsheetApp.getActiveSpreadsheet();
  let permSheet = ss.getSheetByName('Permission');
  
  if (!permSheet) {
    return;
  }
  
  const data = permSheet.getDataRange().getValues();
  
  for (let i = 1; i < data.length; i++) {
    if (data[i][1]) {
      try {
        let apps = JSON.parse(data[i][1]);
        const index = apps.indexOf(oldName);
        if (index !== -1) {
          apps[index] = newName;
          permSheet.getRange(i + 1, 2).setValue(JSON.stringify(apps));
        }
      } catch (e) {
        // ‡∏Ç‡πâ‡∏≤‡∏°
      }
    }
  }
}

function deleteApp(name) {
  const currentUser = Session.getActiveUser().getEmail();
  const effectiveUser = Session.getEffectiveUser().getEmail();
  const userEmail = currentUser || effectiveUser;
  
  if (!isAdmin(userEmail)) {
    return { success: false, message: '‡∏Ñ‡∏∏‡∏ì‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡∏•‡∏ö‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô' };
  }
  
  const sheet = getOrCreateSheet();
  const data = sheet.getDataRange().getValues();
  
  for (let i = 1; i < data.length; i++) {
    if (data[i][0] === name) {
      sheet.deleteRow(i + 1);
      return { success: true };
    }
  }
  return { success: false, message: '‡πÑ‡∏°‡πà‡∏û‡∏ö‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô' };
}

function getAllApps() {
  const currentUser = Session.getActiveUser().getEmail();
  const effectiveUser = Session.getEffectiveUser().getEmail();
  const userEmail = currentUser || effectiveUser;
  
  if (!isAdmin(userEmail)) {
    return { success: false, message: '‡∏Ñ‡∏∏‡∏ì‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå' };
  }
  
  const sheet = getOrCreateSheet();
  const data = sheet.getDataRange().getValues();
  const apps = [];
  
  for (let i = 1; i < data.length; i++) {
    if (data[i][0]) {
      apps.push(data[i][0]);
    }
  }
  return apps;
}

function getAllUsers() {
  const currentUser = Session.getActiveUser().getEmail();
  const effectiveUser = Session.getEffectiveUser().getEmail();
  const userEmail = currentUser || effectiveUser;
  
  if (!isAdmin(userEmail)) {
    return { success: false, message: '‡∏Ñ‡∏∏‡∏ì‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå' };
  }
  
  const ss = SpreadsheetApp.getActiveSpreadsheet();
  let permSheet = ss.getSheetByName('Permission');
  
  if (!permSheet) {
    permSheet = ss.insertSheet('Permission');
    permSheet.appendRow(['UserEmail', 'Apps']);
    return [];
  }
  
  const data = permSheet.getDataRange().getValues();
  const users = [];
  
  for (let i = 1; i < data.length; i++) {
    if (data[i][0]) {
      let apps = [];
      if (data[i][1]) {
        try {
          apps = JSON.parse(data[i][1]);
        } catch (e) {
          apps = [];
        }
      }
      users.push({
        email: data[i][0],
        apps: apps
      });
    }
  }
  return users;
}

function updateUserPermissions(email, apps, sendEmail) {
  const currentUser = Session.getActiveUser().getEmail();
  const effectiveUser = Session.getEffectiveUser().getEmail();
  const userEmail = currentUser || effectiveUser;
  
  if (!isAdmin(userEmail)) {
    return { success: false, message: '‡∏Ñ‡∏∏‡∏ì‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå' };
  }
  
  const ss = SpreadsheetApp.getActiveSpreadsheet();
  let permSheet = ss.getSheetByName('Permission');
  
  if (!permSheet) {
    permSheet = ss.insertSheet('Permission');
    permSheet.appendRow(['UserEmail', 'Apps', 'Name', 'Note']);
  }
  
  const data = permSheet.getDataRange().getValues();
  let found = false;
  let isNewUser = true;
  let oldApps = [];
  
  for (let i = 1; i < data.length; i++) {
    if (data[i][0] && data[i][0].toLowerCase() === email.toLowerCase()) {
      if (data[i][1]) {
        try {
          oldApps = JSON.parse(data[i][1]);
          isNewUser = oldApps.length === 0;
        } catch (e) {
          oldApps = [];
        }
      }
      
      permSheet.getRange(i + 1, 2).setValue(JSON.stringify(apps));
      
      // ‚úÖ ‡πÄ‡∏Ñ‡∏•‡∏µ‡∏¢‡∏£‡πå‡∏´‡∏°‡∏≤‡∏¢‡πÄ‡∏´‡∏ï‡∏∏ "‡∏Ç‡∏≠‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå:" ‡πÄ‡∏°‡∏∑‡πà‡∏≠‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥
      const currentNote = String(permSheet.getRange(i + 1, 4).getValue() || '');
      if (currentNote.includes('‡∏Ç‡∏≠‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå:')) {
        permSheet.getRange(i + 1, 4).setValue(''); // ‡∏•‡∏ö‡∏´‡∏°‡∏≤‡∏¢‡πÄ‡∏´‡∏ï‡∏∏
      }
      
      found = true;
      break;
    }
  }
  
  if (!found) {
    permSheet.appendRow([email, JSON.stringify(apps), '', '']);
  }
  
  // ‚úÖ ‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞‡πÉ‡∏ô Sheet "AppRequest" ‡πÄ‡∏õ‡πá‡∏ô "‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥‡πÅ‡∏•‡πâ‡∏ß"
  let requestSheet = ss.getSheetByName('AppRequest');
  if (requestSheet) {
    const reqData = requestSheet.getDataRange().getValues();
    for (let i = 1; i < reqData.length; i++) {
      if (reqData[i][1] && reqData[i][1].toLowerCase() === email.toLowerCase() && reqData[i][5] === '‡∏£‡∏≠‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥') {
        requestSheet.getRange(i + 1, 6).setValue('‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥‡πÅ‡∏•‡πâ‡∏ß (' + new Date().toLocaleDateString('th-TH') + ')');
      }
    }
  }
  
  // ‡∏™‡πà‡∏á‡∏≠‡∏µ‡πÄ‡∏°‡∏•‡πÄ‡∏â‡∏û‡∏≤‡∏∞‡πÄ‡∏°‡∏∑‡πà‡∏≠ Admin ‡πÄ‡∏•‡∏∑‡∏≠‡∏Å
  if (sendEmail === true) {
    notifyPermissionChange(email, apps, isNewUser);
  }
  
  return { success: true };
}

function getOrCreateSheet() {
  const ss = SpreadsheetApp.getActiveSpreadsheet();
  let sheet = ss.getSheetByName('Apps');
  
  if (!sheet) {
    sheet = ss.insertSheet('Apps');
    sheet.appendRow(['Name', 'URL_Web', 'URL_Photo', 'Owner']);
    
    const currentUser = Session.getActiveUser().getEmail();
    const effectiveUser = Session.getEffectiveUser().getEmail();
    const owner = currentUser || effectiveUser;
    
    sheet.appendRow(['Survey Work Requirement', 'https://example.com/survey', 'https://via.placeholder.com/80/4CAF50/FFFFFF?text=S', owner]);
    sheet.appendRow(['Central Car Booking System', 'https://example.com/car-booking', 'https://via.placeholder.com/80/2196F3/FFFFFF?text=C', owner]);
    sheet.appendRow(['RFI Requirement System', 'https://example.com/rfi', 'https://via.placeholder.com/80/FF9800/FFFFFF?text=R', owner]);
    sheet.appendRow(['Oil Approval', 'https://example.com/oil-approval', 'https://via.placeholder.com/80/F44336/FFFFFF?text=O', owner]);
  }
  
  return sheet;
}

function debugUserInfo() {
  const currentUser = Session.getActiveUser().getEmail();
  const effectiveUser = Session.getEffectiveUser().getEmail();
  
  return {
    currentUser: currentUser || '‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•',
    effectiveUser: effectiveUser || '‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•',
    userEmail: currentUser || effectiveUser || '‡πÑ‡∏°‡πà‡∏ó‡∏£‡∏≤‡∏ö‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ'
  };
}


// ‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏ô‡∏µ‡πâ‡πÉ‡∏ô MenuAPP.gs

// ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏î‡∏∂‡∏á‡πÅ‡∏≠‡∏õ‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î‡∏ó‡∏µ‡πà‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå
function getAvailableAppsForUser() {
  const currentUser = Session.getActiveUser().getEmail();
  const effectiveUser = Session.getEffectiveUser().getEmail();
  const userEmail = currentUser || effectiveUser;
  
  if (!userEmail) {
    return [];
  }
  
  // ‡∏î‡∏∂‡∏á‡πÅ‡∏≠‡∏õ‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î
  const sheet = getOrCreateSheet();
  const lastRow = sheet.getLastRow();
  
  if (lastRow <= 1) {
    return [];
  }
  
  const data = sheet.getRange(2, 1, lastRow - 1, 1).getValues();
  const allApps = data.map(row => row[0]).filter(name => name);
  
  // ‡∏î‡∏∂‡∏á‡πÅ‡∏≠‡∏õ‡∏ó‡∏µ‡πà‡∏°‡∏µ‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡πÅ‡∏•‡πâ‡∏ß
  const userPermissions = getUserPermissions(userEmail);
  
  // ‡∏Ñ‡∏∑‡∏ô‡∏Ñ‡πà‡∏≤‡πÅ‡∏≠‡∏õ‡∏ó‡∏µ‡πà‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå
  const availableApps = allApps.filter(app => !userPermissions.includes(app));
  
  return availableApps;
}

function requestAccess(name, note, selectedApps) {
  Logger.log('=== requestAccess START ===');
  Logger.log('Name: ' + name);
  Logger.log('Note: ' + note);
  Logger.log('Selected Apps: ' + JSON.stringify(selectedApps));
  
  const currentUser = Session.getActiveUser().getEmail();
  const effectiveUser = Session.getEffectiveUser().getEmail();
  const userEmail = currentUser || effectiveUser;
  
  Logger.log('User Email: ' + userEmail);
  
  if (!name || !userEmail) {
    Logger.log('‚ùå Missing name or email');
    return { success: false, message: '‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏Å‡∏£‡∏≠‡∏Å‡∏ä‡∏∑‡πà‡∏≠' };
  }
  
  if (!selectedApps || selectedApps.length === 0) {
    Logger.log('‚ùå No apps selected');
    return { success: false, message: '‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡πÅ‡∏≠‡∏õ‡∏≠‡∏¢‡πà‡∏≤‡∏á‡∏ô‡πâ‡∏≠‡∏¢ 1 ‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£' };
  }
  
  try {
    const ss = SpreadsheetApp.getActiveSpreadsheet();
    Logger.log('‚úÖ Got spreadsheet');
    
    // ‡∏™‡∏£‡πâ‡∏≤‡∏á Sheet "AppRequest" ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡πÄ‡∏Å‡πá‡∏ö‡∏Ñ‡∏≥‡∏Ç‡∏≠ (‡∏ñ‡πâ‡∏≤‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡∏°‡∏µ)
    let requestSheet = ss.getSheetByName('AppRequest');
    
    if (!requestSheet) {
      Logger.log('Creating AppRequest sheet...');
      requestSheet = ss.insertSheet('AppRequest');
      requestSheet.appendRow(['Timestamp', 'UserEmail', 'Name', 'RequestedApps', 'Note', 'Status']);
      
      // ‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤ Header
      const headerRange = requestSheet.getRange('A1:F1');
      headerRange.setBackground('#667eea');
      headerRange.setFontColor('#FFFFFF');
      headerRange.setFontWeight('bold');
      headerRange.setHorizontalAlignment('center');
      
      // ‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤‡∏Ñ‡∏ß‡∏≤‡∏°‡∏Å‡∏ß‡πâ‡∏≤‡∏á‡∏Ñ‡∏≠‡∏•‡∏±‡∏°‡∏ô‡πå
      requestSheet.setColumnWidth(1, 150);
      requestSheet.setColumnWidth(2, 200);
      requestSheet.setColumnWidth(3, 150);
      requestSheet.setColumnWidth(4, 300);
      requestSheet.setColumnWidth(5, 300);
      requestSheet.setColumnWidth(6, 120);
      
      Logger.log('‚úÖ Created AppRequest sheet');
    } else {
      Logger.log('‚úÖ AppRequest sheet exists');
    }
    
    // ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏ß‡πà‡∏≤‡∏°‡∏µ‡∏Ñ‡∏≥‡∏Ç‡∏≠‡∏ó‡∏µ‡πà‡∏£‡∏≠‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥‡∏≠‡∏¢‡∏π‡πà‡πÅ‡∏•‡πâ‡∏ß‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà
    const lastRow = requestSheet.getLastRow();
    Logger.log('Last row: ' + lastRow);
    
    if (lastRow > 1) {
      const data = requestSheet.getRange(1, 1, lastRow, 6).getValues();
      let foundPendingRequest = false;
      
      for (let i = 1; i < data.length; i++) {
        if (data[i][1] === userEmail && data[i][5] === '‡∏£‡∏≠‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥') {
          Logger.log('Found existing pending request at row ' + (i + 1));
          
          // ‡∏°‡∏µ‡∏Ñ‡∏≥‡∏Ç‡∏≠‡∏ó‡∏µ‡πà‡∏£‡∏≠‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥‡∏≠‡∏¢‡∏π‡πà‡πÅ‡∏•‡πâ‡∏ß ‚Üí ‡πÄ‡∏û‡∏¥‡πà‡∏°‡πÅ‡∏≠‡∏õ‡πÄ‡∏Ç‡πâ‡∏≤‡πÑ‡∏õ‡πÉ‡∏ô‡∏Ñ‡∏≥‡∏Ç‡∏≠‡πÄ‡∏î‡∏¥‡∏°
          const existingApps = data[i][3] ? data[i][3].split(', ') : [];
          const mergedApps = [...new Set([...existingApps, ...selectedApps])];
          
          Logger.log('Existing apps: ' + existingApps.join(', '));
          Logger.log('Merged apps: ' + mergedApps.join(', '));
          
          // ‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï Timestamp ‡πÉ‡∏´‡∏°‡πà
          requestSheet.getRange(i + 1, 1).setValue(new Date());
          
          // ‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï‡πÅ‡∏≠‡∏õ‡∏ó‡∏µ‡πà‡∏Ç‡∏≠
          requestSheet.getRange(i + 1, 4).setValue(mergedApps.join(', '));
          
          // ‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï‡∏´‡∏°‡∏≤‡∏¢‡πÄ‡∏´‡∏ï‡∏∏ (‡πÄ‡∏û‡∏¥‡πà‡∏°‡πÄ‡∏Ç‡πâ‡∏≤‡πÑ‡∏õ)
          if (note) {
            const existingNote = data[i][4] || '';
            const separator = existingNote ? '\n---\n' + new Date().toLocaleString('th-TH') + ':\n' : '';
            const newNote = existingNote + separator + note;
            requestSheet.getRange(i + 1, 5).setValue(newNote);
          }
          
          foundPendingRequest = true;
          Logger.log('‚úÖ Updated existing request');
          
          // ‡∏™‡πà‡∏á‡∏≠‡∏µ‡πÄ‡∏°‡∏•‡πÅ‡∏à‡πâ‡∏á Admin
          sendRequestEmail(userEmail, name, mergedApps, note, '‡πÄ‡∏û‡∏¥‡πà‡∏°‡πÄ‡∏ï‡∏¥‡∏°');
          
          return { 
            success: true, 
            message: '‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏Ñ‡∏≥‡∏Ç‡∏≠‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡πÄ‡∏£‡∏µ‡∏¢‡∏ö‡∏£‡πâ‡∏≠‡∏¢ ‡∏£‡∏≠‡∏Å‡∏≤‡∏£‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥‡∏à‡∏≤‡∏Å Admin'
          };
        }
      }
    }
    
    // ‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏Ñ‡∏≥‡∏Ç‡∏≠‡∏ó‡∏µ‡πà‡∏£‡∏≠‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥ ‚Üí ‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏Ñ‡∏≥‡∏Ç‡∏≠‡πÉ‡∏´‡∏°‡πà
    Logger.log('Creating new request...');
    const timestamp = new Date();
    
    requestSheet.appendRow([
      timestamp,
      userEmail,
      name,
      selectedApps.join(', '),
      note || '',
      '‡∏£‡∏≠‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥'
    ]);
    
    Logger.log('‚úÖ Added new request row');
    
    // ‡∏™‡πà‡∏á‡∏≠‡∏µ‡πÄ‡∏°‡∏•‡πÅ‡∏à‡πâ‡∏á Admin
    sendRequestEmail(userEmail, name, selectedApps, note, '‡πÉ‡∏´‡∏°‡πà');
    
    Logger.log('=== requestAccess END (SUCCESS) ===');
    
    return { 
      success: true, 
      message: '‡∏™‡πà‡∏á‡∏Ñ‡∏≥‡∏Ç‡∏≠‡πÄ‡∏Ç‡πâ‡∏≤‡πÉ‡∏ä‡πâ‡∏£‡∏∞‡∏ö‡∏ö‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à ‡∏£‡∏≠‡∏Å‡∏≤‡∏£‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥‡∏à‡∏≤‡∏Å Admin'
    };
    
  } catch (error) {
    Logger.log('‚ùå ERROR: ' + error.toString());
    Logger.log('Stack: ' + error.stack);
    return { 
      success: false, 
      message: '‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ' + error.toString() 
    };
  }
}

// ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏™‡πà‡∏á‡∏≠‡∏µ‡πÄ‡∏°‡∏•‡πÅ‡∏à‡πâ‡∏á Admin ‡πÄ‡∏°‡∏∑‡πà‡∏≠‡∏°‡∏µ‡∏Ñ‡∏ô‡∏Ç‡∏≠‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå
function sendRequestEmail(userEmail, name, apps, note, type) {
  // ‚úÖ ‡∏î‡∏∂‡∏á‡∏≠‡∏µ‡πÄ‡∏°‡∏• Admin ‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î
  const adminEmails = getAllAdminEmails();
  
  if (!adminEmails || adminEmails.length === 0) {
    Logger.log('‚ö†Ô∏è ‡πÑ‡∏°‡πà‡∏û‡∏ö Admin ‡πÉ‡∏ô‡∏£‡∏∞‡∏ö‡∏ö');
    return;
  }
  
  // ‚úÖ ‡∏î‡∏∂‡∏á‡∏•‡∏¥‡∏á‡∏Å‡πå‡∏à‡∏≤‡∏Å Sheet "Link"
  const webAppUrl = getWebAppUrl();
  
  const subject = type === '‡πÉ‡∏´‡∏°‡πà' ? 
    'üîî ‡∏°‡∏µ‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ‡πÉ‡∏´‡∏°‡πà‡∏Ç‡∏≠‡πÄ‡∏Ç‡πâ‡∏≤‡πÉ‡∏ä‡πâ‡∏£‡∏∞‡∏ö‡∏ö' : 
    'üîî ‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ‡∏Ç‡∏≠‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡πÄ‡∏û‡∏¥‡πà‡∏°‡πÄ‡∏ï‡∏¥‡∏°';
  
  const body = `‡∏°‡∏µ‡∏Ñ‡∏≥‡∏Ç‡∏≠${type === '‡πÉ‡∏´‡∏°‡πà' ? '‡πÄ‡∏Ç‡πâ‡∏≤‡πÉ‡∏ä‡πâ‡∏£‡∏∞‡∏ö‡∏ö' : '‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡πÄ‡∏û‡∏¥‡πà‡∏°‡πÄ‡∏ï‡∏¥‡∏°'}\n\n` +
               `‡∏≠‡∏µ‡πÄ‡∏°‡∏•: ${userEmail}\n` +
               `‡∏ä‡∏∑‡πà‡∏≠: ${name}\n` +
               `‡πÅ‡∏≠‡∏õ‡∏ó‡∏µ‡πà‡∏Ç‡∏≠: ${apps.join(', ')}\n` +
               `‡∏´‡∏°‡∏≤‡∏¢‡πÄ‡∏´‡∏ï‡∏∏: ${note || '-'}\n\n` +
               `üîó ‡πÄ‡∏Ç‡πâ‡∏≤‡∏à‡∏±‡∏î‡∏Å‡∏≤‡∏£‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå:\n${webAppUrl || '‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏Ç‡πâ‡∏≤‡∏£‡∏∞‡∏ö‡∏ö‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏à‡∏±‡∏î‡∏Å‡∏≤‡∏£'}\n\n` +
               `‡∏ß‡∏¥‡∏ò‡∏µ‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå:\n` +
               `1. ‡πÄ‡∏Ç‡πâ‡∏≤‡∏£‡∏∞‡∏ö‡∏ö\n` +
               `2. ‡∏Ñ‡∏•‡∏¥‡∏Å‡∏õ‡∏∏‡πà‡∏° "üë• ‡∏à‡∏±‡∏î‡∏Å‡∏≤‡∏£‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå" ‡∏´‡∏£‡∏∑‡∏≠ "üìù ‡∏Ñ‡∏≥‡∏Ç‡∏≠‡πÄ‡∏Ç‡πâ‡∏≤‡πÉ‡∏ä‡πâ"\n` +
               `3. ‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡πÉ‡∏´‡πâ‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ`;
  
  // ‡∏™‡∏£‡πâ‡∏≤‡∏á HTML Email ‡∏™‡∏ß‡∏¢‡∏á‡∏≤‡∏°
  const htmlBody = `
    <div style="font-family: 'Kanit', Arial, sans-serif; max-width: 600px; margin: 0 auto; padding: 20px; background-color: #f5f5f5;">
      <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); padding: 30px; border-radius: 15px 15px 0 0; text-align: center;">
        <h1 style="color: white; margin: 0; font-size: 28px;">üîî ‡πÅ‡∏à‡πâ‡∏á‡πÄ‡∏ï‡∏∑‡∏≠‡∏ô Admin</h1>
      </div>
      
      <div style="background: white; padding: 30px; border-radius: 0 0 15px 15px; box-shadow: 0 4px 15px rgba(0,0,0,0.1);">
        <h2 style="color: #667eea; margin-top: 0;">
          ${type === '‡πÉ‡∏´‡∏°‡πà' ? '‡∏°‡∏µ‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ‡πÉ‡∏´‡∏°‡πà‡∏Ç‡∏≠‡πÄ‡∏Ç‡πâ‡∏≤‡πÉ‡∏ä‡πâ‡∏£‡∏∞‡∏ö‡∏ö' : '‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ‡∏Ç‡∏≠‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡πÄ‡∏û‡∏¥‡πà‡∏°‡πÄ‡∏ï‡∏¥‡∏°'}
        </h2>
        
        <div style="background: #fff3cd; border-left: 4px solid #f59e0b; padding: 15px; border-radius: 5px; margin: 20px 0;">
          <p style="margin: 0; color: #856404;">
            <strong>‚ö†Ô∏è ‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡∏Å‡∏≤‡∏£‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥:</strong> ‡∏°‡∏µ‡∏Ñ‡∏≥‡∏Ç‡∏≠${type === '‡πÉ‡∏´‡∏°‡πà' ? '‡πÄ‡∏Ç‡πâ‡∏≤‡πÉ‡∏ä‡πâ‡∏£‡∏∞‡∏ö‡∏ö‡πÉ‡∏´‡∏°‡πà' : '‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡πÄ‡∏û‡∏¥‡πà‡∏°‡πÄ‡∏ï‡∏¥‡∏°'}‡∏£‡∏≠‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥
          </p>
        </div>
        
        <div style="background: #f8f9fa; padding: 20px; border-radius: 10px; margin: 20px 0;">
          <h3 style="color: #333; margin-top: 0;">üìã ‡∏£‡∏≤‡∏¢‡∏•‡∏∞‡πÄ‡∏≠‡∏µ‡∏¢‡∏î‡∏Ñ‡∏≥‡∏Ç‡∏≠:</h3>
          <p style="color: #666; margin: 5px 0;"><strong>üë§ ‡∏≠‡∏µ‡πÄ‡∏°‡∏•:</strong> ${userEmail}</p>
          <p style="color: #666; margin: 5px 0;"><strong>üìù ‡∏ä‡∏∑‡πà‡∏≠:</strong> ${name}</p>
          <p style="color: #666; margin: 5px 0;"><strong>üì± ‡πÅ‡∏≠‡∏õ‡∏ó‡∏µ‡πà‡∏Ç‡∏≠:</strong></p>
          <div style="margin-top: 10px;">
            ${apps.map(app => `
              <span style="display: inline-block; background: #667eea; color: white; padding: 6px 14px; border-radius: 20px; margin: 4px 4px 4px 0; font-size: 14px;">
                ‚úì ${app}
              </span>
            `).join('')}
          </div>
          ${note ? `
            <div style="margin-top: 15px; padding-top: 15px; border-top: 1px solid #e0e0e0;">
              <p style="color: #666; margin: 5px 0;"><strong>üí¨ ‡∏´‡∏°‡∏≤‡∏¢‡πÄ‡∏´‡∏ï‡∏∏:</strong></p>
              <p style="color: #666; margin: 10px 0; white-space: pre-wrap; background: white; padding: 10px; border-radius: 5px;">${note}</p>
            </div>
          ` : ''}
        </div>
        
        ${webAppUrl ? `
          <div style="text-align: center; margin: 30px 0;">
            <a href="${webAppUrl}" style="display: inline-block; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 15px 40px; text-decoration: none; border-radius: 25px; font-size: 18px; font-weight: bold; box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);">
              üöÄ ‡πÄ‡∏Ç‡πâ‡∏≤‡∏£‡∏∞‡∏ö‡∏ö‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥
            </a>
          </div>
          
          <p style="color: #999; font-size: 14px; text-align: center; margin-top: 20px;">
            ‡∏´‡∏£‡∏∑‡∏≠‡∏Ñ‡∏±‡∏î‡∏•‡∏≠‡∏Å‡∏•‡∏¥‡∏á‡∏Å‡πå‡∏ô‡∏µ‡πâ:<br>
            <code style="background: #f0f0f0; padding: 5px 10px; border-radius: 5px; color: #667eea;">${webAppUrl}</code>
          </p>
        ` : ''}
        
        <div style="background: #e3f2fd; border-left: 4px solid #2196f3; padding: 15px; border-radius: 5px; margin: 20px 0;">
          <p style="margin: 0; color: #1565c0; font-size: 14px;">
            <strong>üí° ‡∏ß‡∏¥‡∏ò‡∏µ‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå:</strong><br>
            1Ô∏è‚É£ ‡πÄ‡∏Ç‡πâ‡∏≤‡∏£‡∏∞‡∏ö‡∏ö<br>
            2Ô∏è‚É£ ‡∏Ñ‡∏•‡∏¥‡∏Å‡∏õ‡∏∏‡πà‡∏° "üë• ‡∏à‡∏±‡∏î‡∏Å‡∏≤‡∏£‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå" ‡∏´‡∏£‡∏∑‡∏≠ "üìù ‡∏Ñ‡∏≥‡∏Ç‡∏≠‡πÄ‡∏Ç‡πâ‡∏≤‡πÉ‡∏ä‡πâ"<br>
            3Ô∏è‚É£ ‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡πÉ‡∏´‡πâ‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ
          </p>
        </div>
        
        <hr style="border: none; border-top: 1px solid #e0e0e0; margin: 30px 0;">
        
        <p style="color: #666; font-size: 14px; text-align: center; margin: 0;">
          ‡∏≠‡∏µ‡πÄ‡∏°‡∏•‡∏ô‡∏µ‡πâ‡∏™‡πà‡∏á‡∏ñ‡∏∂‡∏á Admin ‡∏ó‡∏∏‡∏Å‡∏Ñ‡∏ô‡πÉ‡∏ô‡∏£‡∏∞‡∏ö‡∏ö<br>
          <strong>‡∏ó‡∏µ‡∏°‡∏á‡∏≤‡∏ô‡∏£‡∏∞‡∏ö‡∏ö</strong>
        </p>
      </div>
    </div>
  `;
  
  // ‚úÖ ‡∏™‡πà‡∏á‡∏≠‡∏µ‡πÄ‡∏°‡∏•‡πÉ‡∏´‡πâ Admin ‡∏ó‡∏∏‡∏Å‡∏Ñ‡∏ô
  try {
    MailApp.sendEmail({
      to: adminEmails[0], // Admin ‡∏Ñ‡∏ô‡πÅ‡∏£‡∏Å (Super Admin)
      bcc: adminEmails.slice(1).join(','), // Admin ‡∏ó‡∏µ‡πà‡πÄ‡∏´‡∏•‡∏∑‡∏≠ (‡πÉ‡∏ä‡πâ BCC)
      subject: subject,
      body: body,
      htmlBody: htmlBody,
      name: '‡∏®‡∏π‡∏ô‡∏¢‡πå‡∏£‡∏ß‡∏°‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô'
    });
    Logger.log('‚úÖ ‡∏™‡πà‡∏á‡∏≠‡∏µ‡πÄ‡∏°‡∏•‡πÅ‡∏à‡πâ‡∏á Admin ‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à: ' + adminEmails.length + ' ‡∏Ñ‡∏ô');
  } catch (e) {
    Logger.log('‚ùå ‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏™‡πà‡∏á‡∏≠‡∏µ‡πÄ‡∏°‡∏•‡πÑ‡∏î‡πâ: ' + e);
  }
}

// ‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç getAllUsers ‡πÉ‡∏´‡πâ‡πÅ‡∏™‡∏î‡∏á‡∏ó‡∏±‡πâ‡∏á Name ‡πÅ‡∏•‡∏∞ Note
function getAllUsers() {
  const currentUser = Session.getActiveUser().getEmail();
  const effectiveUser = Session.getEffectiveUser().getEmail();
  const userEmail = currentUser || effectiveUser;
  
  if (!isAdmin(userEmail)) {
    return { success: false, message: '‡∏Ñ‡∏∏‡∏ì‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå' };
  }
  
  const ss = SpreadsheetApp.getActiveSpreadsheet();
  let permSheet = ss.getSheetByName('Permission');
  
  if (!permSheet) {
    permSheet = ss.insertSheet('Permission');
    permSheet.appendRow(['UserEmail', 'Apps', 'Name', 'Note']);
    return [];
  }
  
  const data = permSheet.getDataRange().getValues();
  const users = [];
  
  for (let i = 1; i < data.length; i++) {
    if (data[i][0]) {
      let apps = [];
      if (data[i][1]) {
        try {
          apps = JSON.parse(data[i][1]);
        } catch (e) {
          apps = [];
        }
      }
      users.push({
        email: data[i][0],
        apps: apps,
        name: data[i][2] || '',
        note: data[i][3] || ''
      });
    }
  }
  return users;
}

// ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏´‡∏≤‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ‡∏ó‡∏µ‡πà‡∏°‡∏µ‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡πÄ‡∏Ç‡πâ‡∏≤‡∏ñ‡∏∂‡∏á‡πÅ‡∏≠‡∏õ
function getUsersWithAccessToApp(appName) {
  const ss = SpreadsheetApp.getActiveSpreadsheet();
  let permSheet = ss.getSheetByName('Permission');
  
  if (!permSheet) {
    return [];
  }
  
  const data = permSheet.getDataRange().getValues();
  const users = [];
  
  for (let i = 1; i < data.length; i++) {
    if (data[i][0] && data[i][1]) {
      try {
        const apps = JSON.parse(data[i][1]);
        if (apps.includes(appName)) {
          users.push(data[i][0]);
        }
      } catch (e) {
        // ‡∏Ç‡πâ‡∏≤‡∏°
      }
    }
  }
  
  return users;
}

// ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏™‡πà‡∏á‡∏≠‡∏µ‡πÄ‡∏°‡∏•‡πÅ‡∏à‡πâ‡∏á‡πÄ‡∏ï‡∏∑‡∏≠‡∏ô‡πÅ‡∏≠‡∏õ‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï
function notifyAppUpdate(appName, url, users) {
  if (!users || users.length === 0) {
    return;
  }
  
  // ‡∏î‡∏∂‡∏á URL ‡∏Ç‡∏≠‡∏á‡∏®‡∏π‡∏ô‡∏¢‡πå‡∏£‡∏ß‡∏°‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô
  const webAppUrl = getWebAppUrl();
  
  const subject = 'üîî ‡πÅ‡∏à‡πâ‡∏á‡πÄ‡∏ï‡∏∑‡∏≠‡∏ô: ‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô "' + appName + '" ‡∏°‡∏µ‡∏Å‡∏≤‡∏£‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï';
  const body = `‡πÄ‡∏£‡∏µ‡∏¢‡∏ô ‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô‡∏£‡∏∞‡∏ö‡∏ö\n\n` +
               `‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô "${appName}" ‡∏ó‡∏µ‡πà‡∏Ñ‡∏∏‡∏ì‡∏°‡∏µ‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡πÄ‡∏Ç‡πâ‡∏≤‡∏ñ‡∏∂‡∏á‡∏°‡∏µ‡∏Å‡∏≤‡∏£‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•\n\n` +
               `URL: ${url}\n\n` +
               `‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏Å‡∏≤‡∏£‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡πÅ‡∏õ‡∏•‡∏á‡πÅ‡∏•‡∏∞‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô‡πÑ‡∏î‡πâ‡∏ï‡∏≤‡∏°‡∏õ‡∏Å‡∏ï‡∏¥\n\n` +
               `üîó ‡πÄ‡∏Ç‡πâ‡∏≤‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô‡∏®‡∏π‡∏ô‡∏¢‡πå‡∏£‡∏ß‡∏°‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô:\n${webAppUrl || '‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏ï‡∏¥‡∏î‡∏ï‡πà‡∏≠ Admin'}\n\n` +
               `‡∏Ç‡∏≠‡∏ö‡∏Ñ‡∏∏‡∏ì‡∏Ñ‡∏£‡∏±‡∏ö/‡∏Ñ‡πà‡∏∞\n` +
               `‡∏ó‡∏µ‡∏°‡∏á‡∏≤‡∏ô‡∏£‡∏∞‡∏ö‡∏ö`;
  
  // ‡∏™‡∏£‡πâ‡∏≤‡∏á HTML Email
  const htmlBody = `
    <div style="font-family: 'Kanit', Arial, sans-serif; max-width: 600px; margin: 0 auto; padding: 20px; background-color: #f5f5f5;">
      <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); padding: 30px; border-radius: 15px 15px 0 0; text-align: center;">
        <h1 style="color: white; margin: 0; font-size: 28px;">üîî ‡πÅ‡∏à‡πâ‡∏á‡πÄ‡∏ï‡∏∑‡∏≠‡∏ô‡∏£‡∏∞‡∏ö‡∏ö</h1>
      </div>
      
      <div style="background: white; padding: 30px; border-radius: 0 0 15px 15px; box-shadow: 0 4px 15px rgba(0,0,0,0.1);">
        <h2 style="color: #667eea; margin-top: 0;">‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô‡∏°‡∏µ‡∏Å‡∏≤‡∏£‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï</h2>
        
        <div style="background: #fff3cd; border-left: 4px solid #ffc107; padding: 15px; border-radius: 5px; margin: 20px 0;">
          <p style="margin: 0; color: #856404;">
            <strong>üì± ‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô:</strong> ${appName}
          </p>
        </div>
        
        <p style="color: #333; font-size: 16px; line-height: 1.6;">
          ‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô <strong>"${appName}"</strong> ‡∏ó‡∏µ‡πà‡∏Ñ‡∏∏‡∏ì‡∏°‡∏µ‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡πÄ‡∏Ç‡πâ‡∏≤‡∏ñ‡∏∂‡∏á‡∏°‡∏µ‡∏Å‡∏≤‡∏£‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•
        </p>
        
        <div style="background: #f8f9fa; padding: 15px; border-radius: 10px; margin: 20px 0;">
          <p style="color: #666; margin: 0; font-size: 14px;">
            <strong>üîó URL ‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô:</strong><br>
            <a href="${url}" style="color: #667eea; word-break: break-all;">${url}</a>
          </p>
        </div>
        
        <p style="color: #333; font-size: 16px; line-height: 1.6;">
          ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏Å‡∏≤‡∏£‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡πÅ‡∏õ‡∏•‡∏á‡πÅ‡∏•‡∏∞‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô‡πÑ‡∏î‡πâ‡∏ï‡∏≤‡∏°‡∏õ‡∏Å‡∏ï‡∏¥
        </p>
        
        ${webAppUrl ? `
          <div style="text-align: center; margin: 30px 0;">
            <a href="${webAppUrl}" style="display: inline-block; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 15px 40px; text-decoration: none; border-radius: 25px; font-size: 18px; font-weight: bold; box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);">
              üöÄ ‡πÄ‡∏Ç‡πâ‡∏≤‡∏®‡∏π‡∏ô‡∏¢‡πå‡∏£‡∏ß‡∏°‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô
            </a>
          </div>
          
          <p style="color: #999; font-size: 14px; text-align: center; margin-top: 20px;">
            ‡∏´‡∏£‡∏∑‡∏≠‡∏Ñ‡∏±‡∏î‡∏•‡∏≠‡∏Å‡∏•‡∏¥‡∏á‡∏Å‡πå‡∏ô‡∏µ‡πâ:<br>
            <code style="background: #f0f0f0; padding: 5px 10px; border-radius: 5px; color: #667eea;">${webAppUrl}</code>
          </p>
        ` : ''}
        
        <hr style="border: none; border-top: 1px solid #e0e0e0; margin: 30px 0;">
        
        <p style="color: #666; font-size: 14px; text-align: center; margin: 0;">
          ‡∏Ç‡∏≠‡∏ö‡∏Ñ‡∏∏‡∏ì‡∏ó‡∏µ‡πà‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô‡∏£‡∏∞‡∏ö‡∏ö‡∏Ñ‡∏£‡∏±‡∏ö/‡∏Ñ‡πà‡∏∞<br>
          <strong>‡∏ó‡∏µ‡∏°‡∏á‡∏≤‡∏ô‡∏£‡∏∞‡∏ö‡∏ö</strong>
        </p>
      </div>
    </div>
  `;
  
  // ‡∏™‡πà‡∏á‡∏≠‡∏µ‡πÄ‡∏°‡∏•‡πÅ‡∏ö‡∏ö Batch (‡πÅ‡∏ö‡πà‡∏á‡∏Å‡∏•‡∏∏‡πà‡∏° 100 ‡∏Ñ‡∏ô‡∏ï‡πà‡∏≠‡∏Ñ‡∏£‡∏±‡πâ‡∏á)
  const batchSize = 100;
  let successCount = 0;
  
  for (let i = 0; i < users.length; i += batchSize) {
    const batch = users.slice(i, i + batchSize);
    
    try {
      MailApp.sendEmail({
        to: batch[0],
        bcc: batch.slice(1).join(','),
        subject: subject,
        body: body,
        htmlBody: htmlBody,
        name: '‡∏®‡∏π‡∏ô‡∏¢‡πå‡∏£‡∏ß‡∏°‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô'
      });
      successCount += batch.length;
      Logger.log('‚úÖ ‡∏™‡πà‡∏á‡∏≠‡∏µ‡πÄ‡∏°‡∏•‡πÅ‡∏à‡πâ‡∏á‡πÅ‡∏≠‡∏õ‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï Batch ' + (Math.floor(i/batchSize) + 1) + ': ' + batch.length + ' ‡∏Ñ‡∏ô');
    } catch (e) {
      Logger.log('‚ùå Batch ' + (Math.floor(i/batchSize) + 1) + ' ‡πÑ‡∏°‡πà‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à: ' + e);
    }
  }
  
  Logger.log('‚úÖ ‡∏™‡πà‡∏á‡∏≠‡∏µ‡πÄ‡∏°‡∏•‡πÅ‡∏à‡πâ‡∏á‡πÄ‡∏ï‡∏∑‡∏≠‡∏ô‡πÅ‡∏≠‡∏õ‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à: ' + successCount + '/' + users.length + ' ‡∏Ñ‡∏ô');
}

// ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏î‡∏∂‡∏á URL ‡∏à‡∏≤‡∏Å Sheet "Link"
function getWebAppUrl() {
  try {
    const ss = SpreadsheetApp.getActiveSpreadsheet();
    let linkSheet = ss.getSheetByName('Link');
    
    // ‡∏™‡∏£‡πâ‡∏≤‡∏á Sheet ‡∏ñ‡πâ‡∏≤‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡∏°‡∏µ
    if (!linkSheet) {
      linkSheet = ss.insertSheet('Link');
      linkSheet.appendRow(['‡∏ä‡∏∑‡πà‡∏≠‡∏£‡∏∞‡∏ö‡∏ö', 'URL']);
      linkSheet.appendRow(['‡∏®‡∏π‡∏ô‡∏¢‡πå‡∏£‡∏ß‡∏°‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô', 'https://script.google.com/macros/s/YOUR_URL/exec']);
      
      // ‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤‡∏™‡∏µ Header
      const headerRange = linkSheet.getRange('A1:B1');
      headerRange.setBackground('#667eea');
      headerRange.setFontColor('#FFFFFF');
      headerRange.setFontWeight('bold');
      headerRange.setHorizontalAlignment('center');
      
      // ‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤‡∏Ñ‡∏ß‡∏≤‡∏°‡∏Å‡∏ß‡πâ‡∏≤‡∏á‡∏Ñ‡∏≠‡∏•‡∏±‡∏°‡∏ô‡πå
      linkSheet.setColumnWidth(1, 200);
      linkSheet.setColumnWidth(2, 500);
      
      Logger.log('‚úÖ ‡∏™‡∏£‡πâ‡∏≤‡∏á Sheet "Link" ‡πÅ‡∏•‡πâ‡∏ß - ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÉ‡∏™‡πà URL ‡∏ó‡∏µ‡πà‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á');
      return null;
    }
    
    const data = linkSheet.getDataRange().getValues();
    
    // ‡∏´‡∏≤ URL ‡∏ó‡∏µ‡πà column A = "‡∏®‡∏π‡∏ô‡∏¢‡πå‡∏£‡∏ß‡∏°‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô"
    for (let i = 1; i < data.length; i++) {
      if (data[i][0] === '‡∏®‡∏π‡∏ô‡∏¢‡πå‡∏£‡∏ß‡∏°‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô' && data[i][1]) {
        Logger.log('‚úÖ ‡∏û‡∏ö URL: ' + data[i][1]);
        return data[i][1];
      }
    }
    
    Logger.log('‚ö†Ô∏è ‡πÑ‡∏°‡πà‡∏û‡∏ö URL ‡πÉ‡∏ô‡∏£‡∏∞‡∏ö‡∏ö');
    return null;
    
  } catch (e) {
    Logger.log('‚ùå Error: ' + e);
    return null;
  }
}

// ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏™‡πà‡∏á‡∏≠‡∏µ‡πÄ‡∏°‡∏•‡πÅ‡∏à‡πâ‡∏á‡πÄ‡∏ï‡∏∑‡∏≠‡∏ô‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡∏ñ‡∏π‡∏Å‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡πÅ‡∏õ‡∏•‡∏á
function notifyPermissionChange(email, apps, isNewUser) {
  const subject = isNewUser ? 
    '‚úÖ ‡∏Ñ‡∏≥‡∏Ç‡∏≠‡πÄ‡∏Ç‡πâ‡∏≤‡πÉ‡∏ä‡πâ‡∏£‡∏∞‡∏ö‡∏ö‡πÑ‡∏î‡πâ‡∏£‡∏±‡∏ö‡∏Å‡∏≤‡∏£‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥' : 
    'üîî ‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡∏Å‡∏≤‡∏£‡πÄ‡∏Ç‡πâ‡∏≤‡∏ñ‡∏∂‡∏á‡∏£‡∏∞‡∏ö‡∏ö‡∏Ç‡∏≠‡∏á‡∏Ñ‡∏∏‡∏ì‡∏°‡∏µ‡∏Å‡∏≤‡∏£‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡πÅ‡∏õ‡∏•‡∏á';
  
  let appsList = '';
  if (apps && apps.length > 0) {
    appsList = apps.map((app, index) => `${index + 1}. ${app}`).join('\n');
  } else {
    appsList = '‡πÑ‡∏°‡πà‡∏°‡∏µ (‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡∏ñ‡∏π‡∏Å‡∏¢‡∏Å‡πÄ‡∏•‡∏¥‡∏Å)';
  }
  
  // ‡∏î‡∏∂‡∏á URL ‡∏à‡∏≤‡∏Å Sheet "Link"
  const webAppUrl = getWebAppUrl();
  
  const body = `‡πÄ‡∏£‡∏µ‡∏¢‡∏ô ‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô‡∏£‡∏∞‡∏ö‡∏ö\n\n` +
               `${isNewUser ? '‡∏Ñ‡∏≥‡∏Ç‡∏≠‡πÄ‡∏Ç‡πâ‡∏≤‡πÉ‡∏ä‡πâ‡∏£‡∏∞‡∏ö‡∏ö‡∏Ç‡∏≠‡∏á‡∏Ñ‡∏∏‡∏ì‡πÑ‡∏î‡πâ‡∏£‡∏±‡∏ö‡∏Å‡∏≤‡∏£‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥‡πÅ‡∏•‡πâ‡∏ß! üéâ' : '‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡∏Å‡∏≤‡∏£‡πÄ‡∏Ç‡πâ‡∏≤‡∏ñ‡∏∂‡∏á‡∏£‡∏∞‡∏ö‡∏ö‡∏Ç‡∏≠‡∏á‡∏Ñ‡∏∏‡∏ì‡∏°‡∏µ‡∏Å‡∏≤‡∏£‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡πÅ‡∏õ‡∏•‡∏á'}\n\n` +
               `‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô‡∏ó‡∏µ‡πà‡∏Ñ‡∏∏‡∏ì‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡πÄ‡∏Ç‡πâ‡∏≤‡∏ñ‡∏∂‡∏á‡πÑ‡∏î‡πâ:\n${appsList}\n\n` +
               `${apps && apps.length > 0 ? '‚ú® ‡∏Ñ‡∏∏‡∏ì‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡πÄ‡∏Ç‡πâ‡∏≤‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô‡∏£‡∏∞‡∏ö‡∏ö‡πÑ‡∏î‡πâ‡∏ó‡∏±‡∏ô‡∏ó‡∏µ!\n\n' : '‡∏´‡∏≤‡∏Å‡∏°‡∏µ‡∏Ç‡πâ‡∏≠‡∏™‡∏á‡∏™‡∏±‡∏¢ ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏ï‡∏¥‡∏î‡∏ï‡πà‡∏≠ Admin\n\n'}` +
               `üîó ‡πÄ‡∏Ç‡πâ‡∏≤‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô‡∏®‡∏π‡∏ô‡∏¢‡πå‡∏£‡∏ß‡∏°‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô:\n${webAppUrl}\n\n` +
               `‡∏Ç‡∏≠‡∏ö‡∏Ñ‡∏∏‡∏ì‡∏ó‡∏µ‡πà‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô‡∏£‡∏∞‡∏ö‡∏ö‡∏Ñ‡∏£‡∏±‡∏ö/‡∏Ñ‡πà‡∏∞\n` +
               `‡∏ó‡∏µ‡∏°‡∏á‡∏≤‡∏ô‡∏£‡∏∞‡∏ö‡∏ö`;
  
  // ‡∏™‡∏£‡πâ‡∏≤‡∏á HTML Email ‡∏™‡∏ß‡∏¢‡∏á‡∏≤‡∏°
  const htmlBody = `
    <div style="font-family: 'Kanit', Arial, sans-serif; max-width: 600px; margin: 0 auto; padding: 20px; background-color: #f5f5f5;">
      <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); padding: 30px; border-radius: 15px 15px 0 0; text-align: center;">
        <h1 style="color: white; margin: 0; font-size: 28px;">üöÄ ‡∏®‡∏π‡∏ô‡∏¢‡πå‡∏£‡∏ß‡∏°‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô</h1>
      </div>
      
      <div style="background: white; padding: 30px; border-radius: 0 0 15px 15px; box-shadow: 0 4px 15px rgba(0,0,0,0.1);">
        <h2 style="color: #667eea; margin-top: 0;">
          ${isNewUser ? '‚úÖ ‡∏Ñ‡∏≥‡∏Ç‡∏≠‡πÄ‡∏Ç‡πâ‡∏≤‡πÉ‡∏ä‡πâ‡∏£‡∏∞‡∏ö‡∏ö‡πÑ‡∏î‡πâ‡∏£‡∏±‡∏ö‡∏Å‡∏≤‡∏£‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥' : 'üîî ‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡∏Å‡∏≤‡∏£‡πÄ‡∏Ç‡πâ‡∏≤‡∏ñ‡∏∂‡∏á‡∏£‡∏∞‡∏ö‡∏ö‡∏°‡∏µ‡∏Å‡∏≤‡∏£‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡πÅ‡∏õ‡∏•‡∏á'}
        </h2>
        
        <p style="color: #333; font-size: 16px; line-height: 1.6;">
          ${isNewUser ? '‡∏¢‡∏¥‡∏ô‡∏î‡∏µ‡∏ï‡πâ‡∏≠‡∏ô‡∏£‡∏±‡∏ö! ‡∏Ñ‡∏≥‡∏Ç‡∏≠‡∏Ç‡∏≠‡∏á‡∏Ñ‡∏∏‡∏ì‡πÑ‡∏î‡πâ‡∏£‡∏±‡∏ö‡∏Å‡∏≤‡∏£‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥‡πÅ‡∏•‡πâ‡∏ß üéâ' : '‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡∏Å‡∏≤‡∏£‡πÄ‡∏Ç‡πâ‡∏≤‡∏ñ‡∏∂‡∏á‡∏Ç‡∏≠‡∏á‡∏Ñ‡∏∏‡∏ì‡πÑ‡∏î‡πâ‡∏£‡∏±‡∏ö‡∏Å‡∏≤‡∏£‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï'}
        </p>
        
        <div style="background: #f8f9fa; padding: 20px; border-radius: 10px; margin: 20px 0;">
          <h3 style="color: #667eea; margin-top: 0;">üìã ‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô‡∏ó‡∏µ‡πà‡∏Ñ‡∏∏‡∏ì‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡πÄ‡∏Ç‡πâ‡∏≤‡∏ñ‡∏∂‡∏á:</h3>
          ${apps && apps.length > 0 ? 
            `<ul style="color: #333; line-height: 2;">${apps.map(app => `<li><strong>${app}</strong></li>`).join('')}</ul>` : 
            '<p style="color: #999;">‡πÑ‡∏°‡πà‡∏°‡∏µ (‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡∏ñ‡∏π‡∏Å‡∏¢‡∏Å‡πÄ‡∏•‡∏¥‡∏Å)</p>'
          }
        </div>
        
        ${apps && apps.length > 0 ? `
          <div style="text-align: center; margin: 30px 0;">
            <a href="${webAppUrl}" style="display: inline-block; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 15px 40px; text-decoration: none; border-radius: 25px; font-size: 18px; font-weight: bold; box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);">
              üîó ‡πÄ‡∏Ç‡πâ‡∏≤‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô‡∏£‡∏∞‡∏ö‡∏ö
            </a>
          </div>
          
          <p style="color: #999; font-size: 14px; text-align: center; margin-top: 20px;">
            ‡∏´‡∏£‡∏∑‡∏≠‡∏Ñ‡∏±‡∏î‡∏•‡∏≠‡∏Å‡∏•‡∏¥‡∏á‡∏Å‡πå‡∏ô‡∏µ‡πâ:<br>
            <code style="background: #f0f0f0; padding: 5px 10px; border-radius: 5px; color: #667eea;">${webAppUrl}</code>
          </p>
        ` : ''}
        
        <hr style="border: none; border-top: 1px solid #e0e0e0; margin: 30px 0;">
        
        <p style="color: #666; font-size: 14px; text-align: center; margin: 0;">
          ‡∏Ç‡∏≠‡∏ö‡∏Ñ‡∏∏‡∏ì‡∏ó‡∏µ‡πà‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô‡∏£‡∏∞‡∏ö‡∏ö‡∏Ñ‡∏£‡∏±‡∏ö/‡∏Ñ‡πà‡∏∞<br>
          <strong>‡∏ó‡∏µ‡∏°‡∏á‡∏≤‡∏ô‡∏£‡∏∞‡∏ö‡∏ö</strong>
        </p>
      </div>
    </div>
  `;
  
  try {
    MailApp.sendEmail({
      to: email,
      subject: subject,
      body: body,
      htmlBody: htmlBody
    });
    Logger.log('‚úÖ ‡∏™‡πà‡∏á‡∏≠‡∏µ‡πÄ‡∏°‡∏•‡πÅ‡∏à‡πâ‡∏á‡πÄ‡∏ï‡∏∑‡∏≠‡∏ô‡πÉ‡∏´‡πâ: ' + email);
  } catch (e) {
    Logger.log('‚ùå ‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏™‡πà‡∏á‡∏≠‡∏µ‡πÄ‡∏°‡∏•‡πÑ‡∏î‡πâ: ' + e);
  }
}

function addApp(name, url, photo) {
  const currentUser = Session.getActiveUser().getEmail();
  const effectiveUser = Session.getEffectiveUser().getEmail();
  const userEmail = currentUser || effectiveUser;
  
  if (!isAdmin(userEmail)) {
    return { success: false, message: '‡∏Ñ‡∏∏‡∏ì‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô' };
  }
  
  const sheet = getOrCreateSheet();
  const owner = userEmail;
  sheet.appendRow([name, url, photo, owner]);
  
  // ‡∏™‡πà‡∏á‡∏≠‡∏µ‡πÄ‡∏°‡∏•‡πÅ‡∏à‡πâ‡∏á Admin ‡πÄ‡∏≠‡∏á‡∏ß‡πà‡∏≤‡πÄ‡∏û‡∏¥‡πà‡∏°‡πÅ‡∏≠‡∏õ‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à (Optional)
  try {
    const subject = '‚úÖ ‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô‡πÉ‡∏´‡∏°‡πà‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à';
    const body = `‡∏Ñ‡∏∏‡∏ì‡πÑ‡∏î‡πâ‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô‡πÉ‡∏´‡∏°‡πà‡πÄ‡∏£‡∏µ‡∏¢‡∏ö‡∏£‡πâ‡∏≠‡∏¢‡πÅ‡∏•‡πâ‡∏ß\n\n` +
                 `‡∏ä‡∏∑‡πà‡∏≠‡∏£‡∏∞‡∏ö‡∏ö: ${name}\n` +
                 `URL: ${url}\n\n` +
                 `‡∏≠‡∏¢‡πà‡∏≤‡∏•‡∏∑‡∏°‡πÑ‡∏õ‡∏à‡∏±‡∏î‡∏Å‡∏≤‡∏£‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡πÉ‡∏´‡πâ‡∏Å‡∏±‡∏ö‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ‡∏ó‡∏µ‡πà‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡πÄ‡∏Ç‡πâ‡∏≤‡∏ñ‡∏∂‡∏á‡∏£‡∏∞‡∏ö‡∏ö‡∏ô‡∏µ‡πâ`;
    MailApp.sendEmail(userEmail, subject, body);
  } catch (e) {
    Logger.log('‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏™‡πà‡∏á‡∏≠‡∏µ‡πÄ‡∏°‡∏•‡πÑ‡∏î‡πâ: ' + e);
  }
  
  return { success: true };
}

// ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏™‡∏£‡πâ‡∏≤‡∏á Sheet Report (‡∏Å‡∏î‡∏£‡∏±‡∏ô‡πÉ‡∏ô Apps Script Editor)
function createReportSheet() {
  const ss = SpreadsheetApp.getActiveSpreadsheet();
  let reportSheet = ss.getSheetByName('Report');
  
  if (reportSheet) {
    Logger.log('Sheet Report ‡∏°‡∏µ‡∏≠‡∏¢‡∏π‡πà‡πÅ‡∏•‡πâ‡∏ß');
    return;
  }
  
  // ‡∏™‡∏£‡πâ‡∏≤‡∏á Sheet ‡πÉ‡∏´‡∏°‡πà
  reportSheet = ss.insertSheet('Report');
  
  // ‡∏™‡∏£‡πâ‡∏≤‡∏á Header
  reportSheet.appendRow([
    'Timestamp',
    'UserEmail', 
    'Message', 
    'Status',
    'AdminReply',
    'ReplyDate'
  ]);
  
  // ‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤‡∏Ñ‡∏ß‡∏≤‡∏°‡∏Å‡∏ß‡πâ‡∏≤‡∏á‡∏Ñ‡∏≠‡∏•‡∏±‡∏°‡∏ô‡πå
  reportSheet.setColumnWidth(1, 150); // Timestamp
  reportSheet.setColumnWidth(2, 200); // UserEmail
  reportSheet.setColumnWidth(3, 400); // Message
  reportSheet.setColumnWidth(4, 120); // Status
  reportSheet.setColumnWidth(5, 400); // AdminReply
  reportSheet.setColumnWidth(6, 150); // ReplyDate
  
  // ‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤‡∏™‡∏µ Header
  const headerRange = reportSheet.getRange('A1:F1');
  headerRange.setBackground('#667eea');
  headerRange.setFontColor('#FFFFFF');
  headerRange.setFontWeight('bold');
  headerRange.setHorizontalAlignment('center');
  
  Logger.log('‚úÖ ‡∏™‡∏£‡πâ‡∏≤‡∏á Sheet Report ‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à!');
}

// ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡∏£‡∏≤‡∏¢‡∏á‡∏≤‡∏ô‡∏õ‡∏±‡∏ç‡∏´‡∏≤ - ‡∏™‡πà‡∏á‡πÉ‡∏´‡πâ Admin ‡∏ó‡∏∏‡∏Å‡∏Ñ‡∏ô
function sendReport(message) {
  const currentUser = Session.getActiveUser().getEmail();
  const effectiveUser = Session.getEffectiveUser().getEmail();
  const userEmail = currentUser || effectiveUser;
  
  if (!message) {
    return { success: false, message: '‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏Å‡∏£‡∏≠‡∏Å‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°' };
  }
  
  // ‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏•‡∏á Sheet
  const ss = SpreadsheetApp.getActiveSpreadsheet();
  let reportSheet = ss.getSheetByName('Report');
  
  if (!reportSheet) {
    createReportSheet();
    reportSheet = ss.getSheetByName('Report');
  }
  
  const timestamp = new Date();
  reportSheet.appendRow([
    timestamp,
    userEmail,
    message,
    '‡∏£‡∏≠‡∏î‡∏≥‡πÄ‡∏ô‡∏¥‡∏ô‡∏Å‡∏≤‡∏£',
    '',
    ''
  ]);
  
  // ‚úÖ ‡∏î‡∏∂‡∏á‡∏≠‡∏µ‡πÄ‡∏°‡∏• Admin ‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î
  const adminEmails = getAllAdminEmails();
  
  if (!adminEmails || adminEmails.length === 0) {
    Logger.log('‚ö†Ô∏è ‡πÑ‡∏°‡πà‡∏û‡∏ö Admin ‡πÉ‡∏ô‡∏£‡∏∞‡∏ö‡∏ö');
    return { success: true, message: '‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏£‡∏≤‡∏¢‡∏á‡∏≤‡∏ô‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à ‡πÅ‡∏ï‡πà‡πÑ‡∏°‡πà‡∏°‡∏µ Admin ‡πÉ‡∏ô‡∏£‡∏∞‡∏ö‡∏ö' };
  }
  
  // ‚úÖ ‡∏î‡∏∂‡∏á‡∏•‡∏¥‡∏á‡∏Å‡πå‡∏à‡∏≤‡∏Å Sheet "Link"
  const webAppUrl = getWebAppUrl();
  
  const subject = 'üì¢ ‡∏£‡∏≤‡∏¢‡∏á‡∏≤‡∏ô‡∏õ‡∏±‡∏ç‡∏´‡∏≤/‡∏Ç‡πâ‡∏≠‡πÄ‡∏™‡∏ô‡∏≠‡πÅ‡∏ô‡∏∞‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô';
  const body = `‡∏°‡∏µ‡∏£‡∏≤‡∏¢‡∏á‡∏≤‡∏ô‡∏õ‡∏±‡∏ç‡∏´‡∏≤‡∏à‡∏≤‡∏Å‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ\n\n` +
               `‡∏à‡∏≤‡∏Å: ${userEmail}\n` +
               `‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°:\n${message}\n\n` +
               `‡πÄ‡∏ß‡∏•‡∏≤: ${timestamp.toLocaleString('th-TH')}\n\n` +
               `üîó ‡πÄ‡∏Ç‡πâ‡∏≤‡∏£‡∏∞‡∏ö‡∏ö‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏ï‡∏≠‡∏ö‡∏Å‡∏•‡∏±‡∏ö:\n${webAppUrl || '‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏Ç‡πâ‡∏≤‡∏£‡∏∞‡∏ö‡∏ö‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏ï‡∏≠‡∏ö‡∏Å‡∏•‡∏±‡∏ö'}\n\n` +
               `‡∏ß‡∏¥‡∏ò‡∏µ‡∏ï‡∏≠‡∏ö‡∏Å‡∏•‡∏±‡∏ö:\n` +
               `1. ‡πÄ‡∏Ç‡πâ‡∏≤‡∏£‡∏∞‡∏ö‡∏ö\n` +
               `2. ‡∏Ñ‡∏•‡∏¥‡∏Å‡∏õ‡∏∏‡πà‡∏° "üìã ‡∏î‡∏π‡∏£‡∏≤‡∏¢‡∏á‡∏≤‡∏ô"\n` +
               `3. ‡∏ï‡∏≠‡∏ö‡∏Å‡∏•‡∏±‡∏ö‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ`;
  
  // ‡∏™‡∏£‡πâ‡∏≤‡∏á HTML Email ‡∏™‡∏ß‡∏¢‡∏á‡∏≤‡∏°
  const htmlBody = `
    <div style="font-family: 'Kanit', Arial, sans-serif; max-width: 600px; margin: 0 auto; padding: 20px; background-color: #f5f5f5;">
      <div style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%); padding: 30px; border-radius: 15px 15px 0 0; text-align: center;">
        <h1 style="color: white; margin: 0; font-size: 28px;">üì¢ ‡∏£‡∏≤‡∏¢‡∏á‡∏≤‡∏ô‡∏õ‡∏±‡∏ç‡∏´‡∏≤</h1>
      </div>
      
      <div style="background: white; padding: 30px; border-radius: 0 0 15px 15px; box-shadow: 0 4px 15px rgba(0,0,0,0.1);">
        <h2 style="color: #f59e0b; margin-top: 0;">‡∏°‡∏µ‡∏£‡∏≤‡∏¢‡∏á‡∏≤‡∏ô‡∏õ‡∏±‡∏ç‡∏´‡∏≤‡πÉ‡∏´‡∏°‡πà‡∏à‡∏≤‡∏Å‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ</h2>
        
        <div style="background: #fef3c7; border-left: 4px solid #f59e0b; padding: 15px; border-radius: 5px; margin: 20px 0;">
          <p style="margin: 0; color: #92400e;">
            <strong>‚ö†Ô∏è ‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡∏Å‡∏≤‡∏£‡∏î‡∏≥‡πÄ‡∏ô‡∏¥‡∏ô‡∏Å‡∏≤‡∏£:</strong> ‡∏°‡∏µ‡∏£‡∏≤‡∏¢‡∏á‡∏≤‡∏ô‡∏õ‡∏±‡∏ç‡∏´‡∏≤‡∏´‡∏£‡∏∑‡∏≠‡∏Ç‡πâ‡∏≠‡πÄ‡∏™‡∏ô‡∏≠‡πÅ‡∏ô‡∏∞‡πÉ‡∏´‡∏°‡πà
          </p>
        </div>
        
        <div style="background: #f8f9fa; padding: 20px; border-radius: 10px; margin: 20px 0;">
          <h3 style="color: #333; margin-top: 0;">üìã ‡∏£‡∏≤‡∏¢‡∏•‡∏∞‡πÄ‡∏≠‡∏µ‡∏¢‡∏î:</h3>
          <p style="color: #666; margin: 5px 0;"><strong>üë§ ‡∏à‡∏≤‡∏Å:</strong> ${userEmail}</p>
          <p style="color: #666; margin: 5px 0;"><strong>‚è∞ ‡πÄ‡∏ß‡∏•‡∏≤:</strong> ${timestamp.toLocaleString('th-TH')}</p>
          <div style="margin-top: 15px; padding-top: 15px; border-top: 1px solid #e0e0e0;">
            <p style="color: #666; margin: 5px 0 10px 0;"><strong>üí¨ ‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°:</strong></p>
            <div style="background: white; padding: 15px; border-radius: 8px; border-left: 3px solid #f59e0b;">
              <p style="color: #333; margin: 0; white-space: pre-wrap; line-height: 1.6;">${message}</p>
            </div>
          </div>
        </div>
        
        ${webAppUrl ? `
          <div style="text-align: center; margin: 30px 0;">
            <a href="${webAppUrl}" style="display: inline-block; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 15px 40px; text-decoration: none; border-radius: 25px; font-size: 18px; font-weight: bold; box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);">
              üöÄ ‡πÄ‡∏Ç‡πâ‡∏≤‡∏£‡∏∞‡∏ö‡∏ö‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏ï‡∏≠‡∏ö‡∏Å‡∏•‡∏±‡∏ö
            </a>
          </div>
          
          <p style="color: #999; font-size: 14px; text-align: center; margin-top: 20px;">
            ‡∏´‡∏£‡∏∑‡∏≠‡∏Ñ‡∏±‡∏î‡∏•‡∏≠‡∏Å‡∏•‡∏¥‡∏á‡∏Å‡πå‡∏ô‡∏µ‡πâ:<br>
            <code style="background: #f0f0f0; padding: 5px 10px; border-radius: 5px; color: #667eea;">${webAppUrl}</code>
          </p>
        ` : ''}
        
        <div style="background: #e3f2fd; border-left: 4px solid #2196f3; padding: 15px; border-radius: 5px; margin: 20px 0;">
          <p style="margin: 0; color: #1565c0; font-size: 14px;">
            <strong>üí° ‡∏ß‡∏¥‡∏ò‡∏µ‡∏ï‡∏≠‡∏ö‡∏Å‡∏•‡∏±‡∏ö:</strong><br>
            1Ô∏è‚É£ ‡πÄ‡∏Ç‡πâ‡∏≤‡∏£‡∏∞‡∏ö‡∏ö<br>
            2Ô∏è‚É£ ‡∏Ñ‡∏•‡∏¥‡∏Å‡∏õ‡∏∏‡πà‡∏° "üìã ‡∏î‡∏π‡∏£‡∏≤‡∏¢‡∏á‡∏≤‡∏ô"<br>
            3Ô∏è‚É£ ‡∏ï‡∏≠‡∏ö‡∏Å‡∏•‡∏±‡∏ö‡πÅ‡∏•‡∏∞‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞
          </p>
        </div>
        
        <hr style="border: none; border-top: 1px solid #e0e0e0; margin: 30px 0;">
        
        <p style="color: #666; font-size: 14px; text-align: center; margin: 0;">
          ‡∏≠‡∏µ‡πÄ‡∏°‡∏•‡∏ô‡∏µ‡πâ‡∏™‡πà‡∏á‡∏ñ‡∏∂‡∏á Admin ‡∏ó‡∏∏‡∏Å‡∏Ñ‡∏ô‡πÉ‡∏ô‡∏£‡∏∞‡∏ö‡∏ö<br>
          <strong>‡∏ó‡∏µ‡∏°‡∏á‡∏≤‡∏ô‡∏£‡∏∞‡∏ö‡∏ö</strong>
        </p>
      </div>
    </div>
  `;
  
  // ‚úÖ ‡∏™‡πà‡∏á‡∏≠‡∏µ‡πÄ‡∏°‡∏•‡πÉ‡∏´‡πâ Admin ‡∏ó‡∏∏‡∏Å‡∏Ñ‡∏ô
  try {
    MailApp.sendEmail({
      to: adminEmails[0], // Admin ‡∏Ñ‡∏ô‡πÅ‡∏£‡∏Å (Super Admin)
      bcc: adminEmails.slice(1).join(','), // Admin ‡∏ó‡∏µ‡πà‡πÄ‡∏´‡∏•‡∏∑‡∏≠ (‡πÉ‡∏ä‡πâ BCC)
      subject: subject,
      body: body,
      htmlBody: htmlBody,
      name: '‡∏®‡∏π‡∏ô‡∏¢‡πå‡∏£‡∏ß‡∏°‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô'
    });
    Logger.log('‚úÖ ‡∏™‡πà‡∏á‡∏≠‡∏µ‡πÄ‡∏°‡∏•‡πÅ‡∏à‡πâ‡∏á Admin ‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à: ' + adminEmails.length + ' ‡∏Ñ‡∏ô');
    return { success: true };
  } catch (e) {
    Logger.log('‚ùå ‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏™‡πà‡∏á‡∏≠‡∏µ‡πÄ‡∏°‡∏•‡πÑ‡∏î‡πâ: ' + e);
    return { success: true, message: '‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à ‡πÅ‡∏ï‡πà‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏™‡πà‡∏á‡∏≠‡∏µ‡πÄ‡∏°‡∏•‡πÑ‡∏î‡πâ: ' + e };
  }
}


// ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏î‡∏∂‡∏á‡∏£‡∏≤‡∏¢‡∏á‡∏≤‡∏ô‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î (‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö Admin)
function getAllReports() {
  const currentUser = Session.getActiveUser().getEmail();
  const effectiveUser = Session.getEffectiveUser().getEmail();
  const userEmail = currentUser || effectiveUser;
  
  if (!isAdmin(userEmail)) {
    return { success: false, message: '‡∏Ñ‡∏∏‡∏ì‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå' };
  }
  
  const ss = SpreadsheetApp.getActiveSpreadsheet();
  let reportSheet = ss.getSheetByName('Report');
  
  if (!reportSheet) {
    return [];
  }
  
  const data = reportSheet.getDataRange().getValues();
  const reports = [];
  
  for (let i = data.length - 1; i >= 1; i--) { // ‡πÄ‡∏£‡∏µ‡∏¢‡∏á‡∏à‡∏≤‡∏Å‡πÉ‡∏´‡∏°‡πà‡πÑ‡∏õ‡πÄ‡∏Å‡πà‡∏≤
    if (data[i][0]) {
      reports.push({
        rowIndex: i + 1,
        timestamp: data[i][0],
        userEmail: data[i][1],
        message: data[i][2],
        status: data[i][3] || '‡∏£‡∏≠‡∏î‡∏≥‡πÄ‡∏ô‡∏¥‡∏ô‡∏Å‡∏≤‡∏£',
        adminReply: data[i][4] || '',
        replyDate: data[i][5] || ''
      });
    }
  }
  
  return reports;
}

// ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞‡πÅ‡∏•‡∏∞‡∏ï‡∏≠‡∏ö‡∏Å‡∏•‡∏±‡∏ö
function updateReportStatus(rowIndex, status, adminReply) {
  const currentUser = Session.getActiveUser().getEmail();
  const effectiveUser = Session.getEffectiveUser().getEmail();
  const userEmail = currentUser || effectiveUser;
  
  if (!isAdmin(userEmail)) {
    return { success: false, message: '‡∏Ñ‡∏∏‡∏ì‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå' };
  }
  
  const ss = SpreadsheetApp.getActiveSpreadsheet();
  let reportSheet = ss.getSheetByName('Report');
  
  if (!reportSheet) {
    return { success: false, message: '‡πÑ‡∏°‡πà‡∏û‡∏ö‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•' };
  }
  
  const replyDate = new Date();
  
  // ‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•
  reportSheet.getRange(rowIndex, 4).setValue(status); // Status
  reportSheet.getRange(rowIndex, 5).setValue(adminReply); // AdminReply
  reportSheet.getRange(rowIndex, 6).setValue(replyDate); // ReplyDate
  
  // ‡∏™‡πà‡∏á‡∏≠‡∏µ‡πÄ‡∏°‡∏•‡πÅ‡∏à‡πâ‡∏á‡∏ú‡∏π‡πâ‡∏£‡∏≤‡∏¢‡∏á‡∏≤‡∏ô
  const reporterEmail = reportSheet.getRange(rowIndex, 2).getValue();
  const originalMessage = reportSheet.getRange(rowIndex, 3).getValue();
  
  const subject = '‚úÖ ‡∏ï‡∏≠‡∏ö‡∏Å‡∏•‡∏±‡∏ö: ‡∏£‡∏≤‡∏¢‡∏á‡∏≤‡∏ô‡∏õ‡∏±‡∏ç‡∏´‡∏≤‡∏Ç‡∏≠‡∏á‡∏Ñ‡∏∏‡∏ì';
  const body = `‡πÄ‡∏£‡∏µ‡∏¢‡∏ô ‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô‡∏£‡∏∞‡∏ö‡∏ö\n\n` +
               `‡∏Ç‡∏≠‡∏ö‡∏Ñ‡∏∏‡∏ì‡∏ó‡∏µ‡πà‡∏£‡∏≤‡∏¢‡∏á‡∏≤‡∏ô‡∏õ‡∏±‡∏ç‡∏´‡∏≤‡πÉ‡∏´‡πâ‡πÄ‡∏£‡∏≤\n\n` +
               `‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡∏Ç‡∏≠‡∏á‡∏Ñ‡∏∏‡∏ì:\n"${originalMessage}"\n\n` +
               `‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞: ${status}\n\n` +
               `‡∏Ñ‡∏≥‡∏ï‡∏≠‡∏ö‡∏à‡∏≤‡∏Å Admin:\n${adminReply}\n\n` +
               `‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà‡∏ï‡∏≠‡∏ö‡∏Å‡∏•‡∏±‡∏ö: ${replyDate.toLocaleString('th-TH')}\n\n` +
               `‡∏Ç‡∏≠‡∏ö‡∏Ñ‡∏∏‡∏ì‡∏ó‡∏µ‡πà‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô‡∏£‡∏∞‡∏ö‡∏ö‡∏Ñ‡∏£‡∏±‡∏ö/‡∏Ñ‡πà‡∏∞`;
  
  try {
    MailApp.sendEmail(reporterEmail, subject, body);
  } catch (e) {
    Logger.log('‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏™‡πà‡∏á‡∏≠‡∏µ‡πÄ‡∏°‡∏•‡πÑ‡∏î‡πâ: ' + e);
  }
  
  return { success: true };
}

// ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏•‡∏ö‡∏£‡∏≤‡∏¢‡∏á‡∏≤‡∏ô
function deleteReport(rowIndex) {
  const currentUser = Session.getActiveUser().getEmail();
  const effectiveUser = Session.getEffectiveUser().getEmail();
  const userEmail = currentUser || effectiveUser;
  
  if (!isAdmin(userEmail)) {
    return { success: false, message: '‡∏Ñ‡∏∏‡∏ì‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå' };
  }
  
  const ss = SpreadsheetApp.getActiveSpreadsheet();
  let reportSheet = ss.getSheetByName('Report');
  
  if (!reportSheet) {
    return { success: false, message: '‡πÑ‡∏°‡πà‡∏û‡∏ö‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•' };
  }
  
  reportSheet.deleteRow(rowIndex);
  return { success: true };
}


function debugUserInfo() {
  const currentUser = Session.getActiveUser().getEmail();
  const effectiveUser = Session.getEffectiveUser().getEmail();
  
  return {
    currentUser: currentUser || '‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•',
    effectiveUser: effectiveUser || '‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•',
    userEmail: currentUser || effectiveUser || '‡πÑ‡∏°‡πà‡∏ó‡∏£‡∏≤‡∏ö‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ'
  };
}


function loadReports() {
  console.log('Loading reports...');
  google.script.run
    .withSuccessHandler(function(reports) {
      console.log('Reports received:', reports);
      displayReports(reports);
    })
    .withFailureHandler(function(error) {
      console.error('Error loading reports:', error);
      showMessage('‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ' + error, 'error');
    })
    .getAllReports();
}


function getAllReports() {
  // Default return array ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏õ‡πâ‡∏≠‡∏á‡∏Å‡∏±‡∏ô null
  let reports = [];
  
  try {
    const currentUser = Session.getActiveUser().getEmail();
    const effectiveUser = Session.getEffectiveUser().getEmail();
    const userEmail = currentUser || effectiveUser;
    
    Logger.log('=== getAllReports Start ===');
    Logger.log('User: ' + userEmail);
    Logger.log('Is Admin: ' + isAdmin(userEmail));
    
    // ‡∏ï‡πâ‡∏≠‡∏á‡πÄ‡∏õ‡πá‡∏ô admin
    if (!isAdmin(userEmail)) {
      Logger.log('Not admin - returning empty array');
      return [];
    }
    
    // ‡πÄ‡∏õ‡∏¥‡∏î Spreadsheet
    const ss = SpreadsheetApp.getActiveSpreadsheet();
    let reportSheet = ss.getSheetByName('Report');
    
    Logger.log('Sheet exists: ' + (reportSheet !== null));
    
    // ‡∏™‡∏£‡πâ‡∏≤‡∏á Sheet ‡∏ñ‡πâ‡∏≤‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡∏°‡∏µ
    if (!reportSheet) {
      Logger.log('Creating Report sheet...');
      createReportSheet();
      reportSheet = ss.getSheetByName('Report');
      
      if (!reportSheet) {
        Logger.log('ERROR: Cannot find/create Report sheet');
        return [];
      }
    }
    
    // ‡∏î‡∏∂‡∏á‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•
    const lastRow = reportSheet.getLastRow();
    Logger.log('Last Row: ' + lastRow);
    
    if (lastRow <= 1) {
      Logger.log('No data rows');
      return [];
    }
    
    const data = reportSheet.getRange(1, 1, lastRow, 6).getValues();
    Logger.log('Fetched ' + data.length + ' rows');
    
    // ‡πÅ‡∏õ‡∏•‡∏á‡πÄ‡∏õ‡πá‡∏ô array of objects
    for (let i = data.length - 1; i >= 1; i--) {
      if (data[i][0]) {
        const report = {
          rowIndex: i + 1,
          timestamp: data[i][0],
          userEmail: String(data[i][1] || ''),
          message: String(data[i][2] || ''),
          status: String(data[i][3] || '‡∏£‡∏≠‡∏î‡∏≥‡πÄ‡∏ô‡∏¥‡∏ô‡∏Å‡∏≤‡∏£'),
          adminReply: String(data[i][4] || ''),
          replyDate: data[i][5] || ''
        };
        reports.push(report);
      }
    }
    
    Logger.log('Returning ' + reports.length + ' reports');
    Logger.log('Reports array: ' + JSON.stringify(reports));
    
  } catch (error) {
    Logger.log('ERROR: ' + error.toString());
    Logger.log('Stack: ' + error.stack);
  }
  
  // ALWAYS return array - never null
  return reports;
}




