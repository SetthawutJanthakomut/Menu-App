// ‚ú® ‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏ô‡∏µ‡πâ‡πÉ‡∏ô MenuAPP.gs
// ============================================

// ‡∏ß‡∏≤‡∏á‡πÑ‡∏ß‡πâ‡∏´‡∏•‡∏±‡∏á function getVersion()
function getManualUrl() {
  try {
    const ss = SpreadsheetApp.getActiveSpreadsheet();
    let linkSheet = ss.getSheetByName('Link');
    
    if (!linkSheet) {
      Logger.log('‚ö†Ô∏è ‡πÑ‡∏°‡πà‡∏û‡∏ö Sheet "Link"');
      return null;
    }
    
    const data = linkSheet.getDataRange().getValues();
    
    // ‡∏´‡∏≤ URL ‡∏ó‡∏µ‡πà column A = "‡∏®‡∏π‡∏ô‡∏¢‡πå‡∏£‡∏ß‡∏°‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô"
    for (let i = 1; i < data.length; i++) {
      if (data[i][0] === '‡∏®‡∏π‡∏ô‡∏¢‡πå‡∏£‡∏ß‡∏°‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô' && data[i][1]) {
        const baseUrl = data[i][1];
        const manualUrl = baseUrl + '?page=manual';
        Logger.log('‚úÖ Manual URL: ' + manualUrl);
        return manualUrl;
      }
    }
    
    Logger.log('‚ö†Ô∏è ‡πÑ‡∏°‡πà‡∏û‡∏ö URL ‡πÉ‡∏ô‡∏£‡∏∞‡∏ö‡∏ö');
    return null;
    
  } catch (e) {
    Logger.log('‚ùå Error: ' + e);
    return null;
  }
}

// ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏î‡∏∂‡∏á‡∏Ñ‡∏≥‡∏Ç‡∏≠‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î
function getAllAppRequests() {
  const currentUser = Session.getActiveUser().getEmail();
  const effectiveUser = Session.getEffectiveUser().getEmail();
  const userEmail = currentUser || effectiveUser;
  
  if (!isAdmin(userEmail)) {
    return { success: false, message: '‡∏Ñ‡∏∏‡∏ì‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå' };
  }
  
  const ss = SpreadsheetApp.getActiveSpreadsheet();
  let requestSheet = ss.getSheetByName('AppRequest');
  
  if (!requestSheet) {
    return [];
  }
  
  const lastRow = requestSheet.getLastRow();
  if (lastRow <= 1) {
    return [];
  }
  
  const data = requestSheet.getRange(1, 1, lastRow, 6).getValues();
  const requests = [];
  
  for (let i = data.length - 1; i >= 1; i--) {
    if (data[i][0]) {
      const timestamp = data[i][0] instanceof Date ? data[i][0].toISOString() : String(data[i][0] || '');
      
      requests.push({
        rowIndex: i + 1,
        timestamp: timestamp,
        userEmail: String(data[i][1] || ''),
        name: String(data[i][2] || ''),
        requestedApps: String(data[i][3] || ''),
        note: String(data[i][4] || ''),
        status: String(data[i][5] || '‡∏£‡∏≠‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥')
      });
    }
  }
  
  return requests;
}

// ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥‡∏Ñ‡∏≥‡∏Ç‡∏≠‡πÅ‡∏•‡∏∞‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡πÉ‡∏´‡πâ‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ
function approveAppRequest(rowIndex, userEmail, requestedApps) {
  const currentUser = Session.getActiveUser().getEmail();
  const effectiveUser = Session.getEffectiveUser().getEmail();
  const adminEmail = currentUser || effectiveUser;
  
  if (!isAdmin(adminEmail)) {
    return { success: false, message: '‡∏Ñ‡∏∏‡∏ì‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå' };
  }
  
  try {
    const ss = SpreadsheetApp.getActiveSpreadsheet();
    
    // 1. ‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞‡πÉ‡∏ô‡∏Ñ‡∏≥‡∏Ç‡∏≠
    let requestSheet = ss.getSheetByName('AppRequest');
    if (requestSheet) {
      requestSheet.getRange(rowIndex, 6).setValue('‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥‡πÅ‡∏•‡πâ‡∏ß (' + new Date().toLocaleDateString('th-TH') + ')');
    }
    
    // 2. ‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡πÉ‡∏´‡πâ‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ
    const appsArray = requestedApps.split(', ').map(app => app.trim());
    
    let permSheet = ss.getSheetByName('Permission');
    if (!permSheet) {
      permSheet = ss.insertSheet('Permission');
      permSheet.appendRow(['UserEmail', 'Apps', 'Name', 'Note']);
    }
    
    const data = permSheet.getDataRange().getValues();
    let existingRow = -1;
    let existingApps = [];
    
    for (let i = 1; i < data.length; i++) {
      if (data[i][0] && data[i][0].toLowerCase() === userEmail.toLowerCase()) {
        existingRow = i + 1;
        if (data[i][1]) {
          try {
            existingApps = JSON.parse(data[i][1]);
          } catch (e) {
            existingApps = [];
          }
        }
        break;
      }
    }
    
    // ‡∏£‡∏ß‡∏°‡πÅ‡∏≠‡∏õ‡πÄ‡∏î‡∏¥‡∏°‡∏Å‡∏±‡∏ö‡πÅ‡∏≠‡∏õ‡πÉ‡∏´‡∏°‡πà (‡πÑ‡∏°‡πà‡∏ã‡πâ‡∏≥‡∏Å‡∏±‡∏ô)
    const mergedApps = [...new Set([...existingApps, ...appsArray])];
    
    if (existingRow > 0) {
      permSheet.getRange(existingRow, 2).setValue(JSON.stringify(mergedApps));
    } else {
      // ‡∏ñ‡πâ‡∏≤‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡∏°‡∏µ ‡πÉ‡∏´‡πâ‡∏™‡∏£‡πâ‡∏≤‡∏á‡πÉ‡∏´‡∏°‡πà
      const name = requestSheet ? requestSheet.getRange(rowIndex, 3).getValue() : '';
      permSheet.appendRow([userEmail, JSON.stringify(mergedApps), name, '']);
    }
    
    // 3. ‡∏™‡πà‡∏á‡∏≠‡∏µ‡πÄ‡∏°‡∏•‡πÅ‡∏à‡πâ‡∏á‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ
    notifyPermissionChange(userEmail, mergedApps, existingApps.length === 0);
    
    return { success: true, message: '‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥‡πÅ‡∏•‡∏∞‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à' };
    
  } catch (error) {
    Logger.log('‚ùå Error: ' + error);
    return { success: false, message: error.toString() };
  }
}

// ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏õ‡∏è‡∏¥‡πÄ‡∏™‡∏ò‡∏Ñ‡∏≥‡∏Ç‡∏≠
function rejectAppRequest(rowIndex, userEmail, reason) {
  const currentUser = Session.getActiveUser().getEmail();
  const effectiveUser = Session.getEffectiveUser().getEmail();
  const adminEmail = currentUser || effectiveUser;
  
  if (!isAdmin(adminEmail)) {
    return { success: false, message: '‡∏Ñ‡∏∏‡∏ì‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå' };
  }
  
  try {
    const ss = SpreadsheetApp.getActiveSpreadsheet();
    let requestSheet = ss.getSheetByName('AppRequest');
    
    if (!requestSheet) {
      return { success: false, message: '‡πÑ‡∏°‡πà‡∏û‡∏ö‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•' };
    }
    
    // ‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞
    const rejectStatus = '‡∏õ‡∏è‡∏¥‡πÄ‡∏™‡∏ò (' + new Date().toLocaleDateString('th-TH') + ')';
    requestSheet.getRange(rowIndex, 6).setValue(rejectStatus);
    
    // ‡∏™‡πà‡∏á‡∏≠‡∏µ‡πÄ‡∏°‡∏•‡πÅ‡∏à‡πâ‡∏á‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ
    const subject = '‚ùå ‡∏Ñ‡∏≥‡∏Ç‡∏≠‡πÄ‡∏Ç‡πâ‡∏≤‡πÉ‡∏ä‡πâ‡∏£‡∏∞‡∏ö‡∏ö‡πÑ‡∏°‡πà‡πÑ‡∏î‡πâ‡∏£‡∏±‡∏ö‡∏Å‡∏≤‡∏£‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥';
    const body = `‡πÄ‡∏£‡∏µ‡∏¢‡∏ô ‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô‡∏£‡∏∞‡∏ö‡∏ö\n\n` +
                 `‡∏Ç‡∏≠‡∏≠‡∏†‡∏±‡∏¢ ‡∏Ñ‡∏≥‡∏Ç‡∏≠‡πÄ‡∏Ç‡πâ‡∏≤‡πÉ‡∏ä‡πâ‡∏£‡∏∞‡∏ö‡∏ö‡∏Ç‡∏≠‡∏á‡∏Ñ‡∏∏‡∏ì‡πÑ‡∏°‡πà‡πÑ‡∏î‡πâ‡∏£‡∏±‡∏ö‡∏Å‡∏≤‡∏£‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥\n\n` +
                 `‡πÄ‡∏´‡∏ï‡∏∏‡∏ú‡∏•: ${reason || '‡πÑ‡∏°‡πà‡∏£‡∏∞‡∏ö‡∏∏'}\n\n` +
                 `‡∏´‡∏≤‡∏Å‡∏°‡∏µ‡∏Ç‡πâ‡∏≠‡∏™‡∏á‡∏™‡∏±‡∏¢ ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏ï‡∏¥‡∏î‡∏ï‡πà‡∏≠ Admin\n\n` +
                 `‡∏Ç‡∏≠‡∏ö‡∏Ñ‡∏∏‡∏ì‡∏Ñ‡∏£‡∏±‡∏ö/‡∏Ñ‡πà‡∏∞`;
    
    try {
      MailApp.sendEmail(userEmail, subject, body);
    } catch (e) {
      Logger.log('‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏™‡πà‡∏á‡∏≠‡∏µ‡πÄ‡∏°‡∏•‡πÑ‡∏î‡πâ: ' + e);
    }
    
    return { success: true };
    
  } catch (error) {
    Logger.log('‚ùå Error: ' + error);
    return { success: false, message: error.toString() };
  }
}

// ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏•‡∏ö‡∏Ñ‡∏≥‡∏Ç‡∏≠
function deleteAppRequest(rowIndex) {
  const currentUser = Session.getActiveUser().getEmail();
  const effectiveUser = Session.getEffectiveUser().getEmail();
  const userEmail = currentUser || effectiveUser;
  
  if (!isAdmin(userEmail)) {
    return { success: false, message: '‡∏Ñ‡∏∏‡∏ì‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå' };
  }
  
  const ss = SpreadsheetApp.getActiveSpreadsheet();
  let requestSheet = ss.getSheetByName('AppRequest');
  
  if (!requestSheet) {
    return { success: false, message: '‡πÑ‡∏°‡πà‡∏û‡∏ö‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•' };
  }
  
  requestSheet.deleteRow(rowIndex);
  return { success: true };
}

// ‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏ô‡∏µ‡πâ‡πÉ‡∏ô MenuAPP.gs

function deleteUser(email) {
  const currentUser = Session.getActiveUser().getEmail();
  const effectiveUser = Session.getEffectiveUser().getEmail();
  const userEmail = currentUser || effectiveUser;
  
  if (!isAdmin(userEmail)) {
    return { success: false, message: '‡∏Ñ‡∏∏‡∏ì‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå' };
  }
  
  try {
    const ss = SpreadsheetApp.getActiveSpreadsheet();
    let permSheet = ss.getSheetByName('Permission');
    
    if (!permSheet) {
      return { success: false, message: '‡πÑ‡∏°‡πà‡∏û‡∏ö Sheet Permission' };
    }
    
    const data = permSheet.getDataRange().getValues();
    
    // ‡∏´‡∏≤‡πÅ‡∏ñ‡∏ß‡∏ó‡∏µ‡πà‡∏ï‡∏£‡∏á‡∏Å‡∏±‡∏ö‡∏≠‡∏µ‡πÄ‡∏°‡∏•‡∏ó‡∏µ‡πà‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡∏•‡∏ö
    for (let i = 1; i < data.length; i++) {
      if (data[i][0] && data[i][0].toLowerCase() === email.toLowerCase()) {
        permSheet.deleteRow(i + 1);
        Logger.log('‚úÖ ‡∏•‡∏ö‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ: ' + email);
        return { success: true, message: '‡∏•‡∏ö‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à' };
      }
    }
    
    return { success: false, message: '‡πÑ‡∏°‡πà‡∏û‡∏ö‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ‡∏ô‡∏µ‡πâ‡πÉ‡∏ô‡∏£‡∏∞‡∏ö‡∏ö' };
    
  } catch (error) {
    Logger.log('‚ùå Error: ' + error);
    return { success: false, message: error.toString() };
  }
}

// ================================
// üëë ‡∏£‡∏∞‡∏ö‡∏ö‡∏à‡∏±‡∏î‡∏Å‡∏≤‡∏£ Admin
// ================================

function addAdmin(email) {
  const currentUser = Session.getActiveUser().getEmail();
  const effectiveUser = Session.getEffectiveUser().getEmail();
  const userEmail = currentUser || effectiveUser;
  
  Logger.log('=== addAdmin START ===');
  Logger.log('Requester: ' + userEmail);
  Logger.log('New Admin: ' + email);
  
  if (!isSuperAdmin(userEmail)) {
    Logger.log('‚ùå Not Super Admin');
    return { success: false, message: '‡πÄ‡∏â‡∏û‡∏≤‡∏∞ Super Admin ‡πÄ‡∏ó‡πà‡∏≤‡∏ô‡∏±‡πâ‡∏ô‡∏ó‡∏µ‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡πÄ‡∏û‡∏¥‡πà‡∏° Admin ‡πÑ‡∏î‡πâ' };
  }
  
  if (!email || !email.includes('@')) {
    Logger.log('‚ùå Invalid email');
    return { success: false, message: '‡∏£‡∏π‡∏õ‡πÅ‡∏ö‡∏ö‡∏≠‡∏µ‡πÄ‡∏°‡∏•‡πÑ‡∏°‡πà‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á' };
  }
  
  if (isSuperAdmin(email)) {
    Logger.log('‚ùå Cannot add Super Admin');
    return { success: false, message: '‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡πÄ‡∏û‡∏¥‡πà‡∏° Super Admin ‡πÑ‡∏î‡πâ' };
  }
  
  const ss = SpreadsheetApp.getActiveSpreadsheet();
  let adminSheet = ss.getSheetByName('Admins');
  
  if (!adminSheet) {
    Logger.log('‚ùå Sheet not found');
    return { success: false, message: '‡πÑ‡∏°‡πà‡∏û‡∏ö Sheet Admins' };
  }
  
  const data = adminSheet.getDataRange().getValues();
  for (let i = 1; i < data.length; i++) {
    if (data[i][0] && data[i][0].toLowerCase() === email.toLowerCase()) {
      Logger.log('‚ö†Ô∏è Already admin');
      return { success: false, message: '‡∏≠‡∏µ‡πÄ‡∏°‡∏•‡∏ô‡∏µ‡πâ‡πÄ‡∏õ‡πá‡∏ô Admin ‡∏≠‡∏¢‡∏π‡πà‡πÅ‡∏•‡πâ‡∏ß' };
    }
  }
  
  const timestamp = new Date();
  adminSheet.appendRow([email, timestamp, userEmail, 'Admin']);
  
  Logger.log('‚úÖ Admin added successfully');
  
  // ‚úÖ ‡∏î‡∏∂‡∏á‡∏•‡∏¥‡∏á‡∏Å‡πå‡∏à‡∏≤‡∏Å Sheet "Link"
  const webAppUrl = getWebAppUrl();
  
  // ‡∏™‡πà‡∏á‡∏≠‡∏µ‡πÄ‡∏°‡∏•‡πÅ‡∏à‡πâ‡∏á‡∏ú‡∏π‡πâ‡∏ó‡∏µ‡πà‡πÑ‡∏î‡πâ‡∏£‡∏±‡∏ö‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå
  try {
    const subject = 'üëë ‡∏Ñ‡∏∏‡∏ì‡πÑ‡∏î‡πâ‡∏£‡∏±‡∏ö‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå Admin ‡πÉ‡∏ô‡∏®‡∏π‡∏ô‡∏¢‡πå‡∏£‡∏ß‡∏°‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô';
    const body = `‡πÄ‡∏£‡∏µ‡∏¢‡∏ô ${email}\n\n` +
                 `‡∏Ñ‡∏∏‡∏ì‡πÑ‡∏î‡πâ‡∏£‡∏±‡∏ö‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡∏ú‡∏π‡πâ‡∏î‡∏π‡πÅ‡∏•‡∏£‡∏∞‡∏ö‡∏ö (Admin) ‡πÉ‡∏ô‡∏®‡∏π‡∏ô‡∏¢‡πå‡∏£‡∏ß‡∏°‡∏£‡∏∞‡∏ö‡∏ö‡∏á‡∏≤‡∏ô\n\n` +
                 `‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡∏Ç‡∏≠‡∏á Admin:\n` +
