  }
  
  Logger.log('‚ùå Admin not found');
  return { success: false, message: '‡πÑ‡∏°‡πà‡∏û‡∏ö Admin ‡∏ô‡∏µ‡πâ' };
}

// ‡∏î‡∏π‡∏£‡∏≤‡∏¢‡∏ä‡∏∑‡πà‡∏≠ Admin ‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î
function getAllAdmins() {
  const currentUser = Session.getActiveUser().getEmail();
  const effectiveUser = Session.getEffectiveUser().getEmail();
  const userEmail = currentUser || effectiveUser;
  
  Logger.log('=== getAllAdmins START ===');
  Logger.log('Requester: ' + userEmail);
  
  if (!isAdmin(userEmail)) {
    Logger.log('‚ùå Not authorized');
    return { success: false, message: '‡∏Ñ‡∏∏‡∏ì‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå' };
  }
  
  const ss = SpreadsheetApp.getActiveSpreadsheet();
  let adminSheet = ss.getSheetByName('Admins');
  
  if (!adminSheet) {
    Logger.log('‚ùå Sheet not found');
    return [];
  }
  
  const data = adminSheet.getDataRange().getValues();
  const admins = [];
  const isSuperAdminUser = isSuperAdmin(userEmail);
  
  for (let i = 1; i < data.length; i++) {
    if (data[i][0]) {
      const role = data[i][3] || 'Admin';
      const isSuperAdminRow = isSuperAdmin(data[i][0]);
      
      admins.push({
        email: data[i][0],
        addedDate: data[i][1] ? new Date(data[i][1]).toLocaleString('th-TH') : '-',
        addedBy: data[i][2] || '-',
        role: isSuperAdminRow ? 'üëë Super Admin' : 'üë§ Admin',
        // ‚úÖ ‡πÄ‡∏â‡∏û‡∏≤‡∏∞ Super Admin ‡πÄ‡∏ó‡πà‡∏≤‡∏ô‡∏±‡πâ‡∏ô‡∏ó‡∏µ‡πà‡∏•‡∏ö Admin ‡∏Ñ‡∏ô‡∏≠‡∏∑‡πà‡∏ô‡πÑ‡∏î‡πâ
        // ‡πÅ‡∏•‡∏∞‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏•‡∏ö‡∏ï‡∏±‡∏ß‡πÄ‡∏≠‡∏á ‡∏´‡∏£‡∏∑‡∏≠ Super Admin ‡πÑ‡∏î‡πâ
        canDelete: isSuperAdminUser && 
                   !isSuperAdminRow && 
                   data[i][0].toLowerCase() !== userEmail.toLowerCase()
      });
    }
  }
  
  Logger.log('Found ' + admins.length + ' admins');
  Logger.log('=== getAllAdmins END ===');
  
  return admins;
}

// ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏î‡∏∂‡∏á‡∏≠‡∏µ‡πÄ‡∏°‡∏• Admin ‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î (‡∏£‡∏ß‡∏° Super Admin)
function getAllAdminEmails() {
  const ss = SpreadsheetApp.getActiveSpreadsheet();
  let adminSheet = ss.getSheetByName('Admins');
  
  const adminEmails = [];
  
  // ‡πÄ‡∏û‡∏¥‡πà‡∏° Super Admin ‡πÄ‡∏õ‡πá‡∏ô‡∏Ñ‡∏ô‡πÅ‡∏£‡∏Å‡πÄ‡∏™‡∏°‡∏≠
  adminEmails.push('setthawut.se11@gmail.com');
  
  if (!adminSheet) {
    Logger.log('‚ö†Ô∏è ‡πÑ‡∏°‡πà‡∏û‡∏ö Sheet Admins - ‡∏™‡πà‡∏á‡πÉ‡∏´‡πâ Super Admin ‡πÄ‡∏ó‡πà‡∏≤‡∏ô‡∏±‡πâ‡∏ô');
    return adminEmails;
  }
  
  const data = adminSheet.getDataRange().getValues();
  
  for (let i = 1; i < data.length; i++) {
    if (data[i][0] && data[i][0].includes('@')) {
      const email = data[i][0].toLowerCase();
      // ‡∏õ‡πâ‡∏≠‡∏á‡∏Å‡∏±‡∏ô‡∏Å‡∏≤‡∏£‡πÄ‡∏û‡∏¥‡πà‡∏° Super Admin ‡∏ã‡πâ‡∏≥
      if (email !== 'setthawut.se11@gmail.com'.toLowerCase() && 
          !adminEmails.includes(email)) {
        adminEmails.push(data[i][0]);
      }
    }
  }
  
  Logger.log('üìß ‡∏û‡∏ö Admin ‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î: ' + adminEmails.length + ' ‡∏Ñ‡∏ô');
  Logger.log('Admin Emails: ' + adminEmails.join(', '));
  
  return adminEmails;
}

// ================================
// üìä ‡∏ô‡∏±‡∏ö‡∏à‡∏≥‡∏ô‡∏ß‡∏ô‡∏Ñ‡∏≥‡∏Ç‡∏≠‡πÅ‡∏•‡∏∞‡∏£‡∏≤‡∏¢‡∏á‡∏≤‡∏ô‡πÉ‡∏´‡∏°‡πà
// ================================

// ‡∏ô‡∏±‡∏ö‡∏Ñ‡∏≥‡∏Ç‡∏≠‡∏ó‡∏µ‡πà‡∏£‡∏≠‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥
function getPendingRequestsCount() {
  try {
    const ss = SpreadsheetApp.getActiveSpreadsheet();
    let requestSheet = ss.getSheetByName('AppRequest');
    
    if (!requestSheet) return 0;
    
    const lastRow = requestSheet.getLastRow();
    if (lastRow <= 1) return 0;
    
    const data = requestSheet.getRange(1, 1, lastRow, 6).getValues();
    let count = 0;
    
    for (let i = 1; i < data.length; i++) {
      if (data[i][0] && data[i][5] === '‡∏£‡∏≠‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥') {
        count++;
      }
    }
    
    return count;
  } catch (error) {
    Logger.log('Error getPendingRequestsCount: ' + error);
    return 0;
  }
}


// ‡∏ô‡∏±‡∏ö‡∏£‡∏≤‡∏¢‡∏á‡∏≤‡∏ô‡∏ó‡∏µ‡πà‡∏£‡∏≠‡∏î‡∏≥‡πÄ‡∏ô‡∏¥‡∏ô‡∏Å‡∏≤‡∏£
function getPendingReportsCount() {
  try {
    const ss = SpreadsheetApp.getActiveSpreadsheet();
    let reportSheet = ss.getSheetByName('Report');
    
    if (!reportSheet) return 0;
    
    const lastRow = reportSheet.getLastRow();
    if (lastRow <= 1) return 0;
    
    const data = reportSheet.getRange(1, 1, lastRow, 6).getValues();
    let count = 0;
    
    for (let i = 1; i < data.length; i++) {
      if (data[i][0] && (data[i][3] === '‡∏£‡∏≠‡∏î‡∏≥‡πÄ‡∏ô‡∏¥‡∏ô‡∏Å‡∏≤‡∏£' || !data[i][4])) {
        count++;
      }
    }
    
    return count;
  } catch (error) {
    Logger.log('Error getPendingReportsCount: ' + error);
    return 0;
  }
}

// ‡∏î‡∏∂‡∏á‡∏à‡∏≥‡∏ô‡∏ß‡∏ô‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î‡∏û‡∏£‡πâ‡∏≠‡∏°‡∏Å‡∏±‡∏ô (‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö Admin)
function getAllPendingCounts() {
  return {
    requests: getPendingRequestsCount(),
    reports: getPendingReportsCount()
  };
}

