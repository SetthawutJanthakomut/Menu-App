        Logger.log('‚ö†Ô∏è Cannot send email: ' + e);
      }
      
      Logger.log('‚úÖ Admin removed successfully');
      return { success: true, message: '‡∏•‡∏ö Admin ‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à' };
